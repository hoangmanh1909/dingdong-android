<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingTop="@dimen/dimen_10dp"
   >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/dimen_10dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img"
            android:layout_width="@dimen/dimen_56dp"
            android:layout_height="@dimen/dimen_56dp"
            android:src="@drawable/ic_collect_service" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/dimen_10dp"
            android:orientation="vertical">

            <com.vinatti.dingdong.views.CustomBoldTextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Gom Hàng"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_18sp" />

            <com.vinatti.dingdong.views.CustomTextView
                android:id="@+id/tv_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="-Xác nhận tin \n- Cập nhật tin thu gom"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_14sp" />

        </LinearLayout>


    </LinearLayout>

    <View style="@style/Devider" />
</LinearLayout>