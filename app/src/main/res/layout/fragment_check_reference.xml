<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical">

    <FrameLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <include layout="@layout/item_head_bg_common" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/img_back"
                android:layout_width="@dimen/dimen_56dp"
                android:layout_height="@dimen/dimen_56dp"
                android:layout_centerVertical="true"
                android:padding="@dimen/dimen_10dp"
                android:src="@drawable/ic_back_shadown" />

            <com.ems.dingdong.views.CustomBoldTextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="Thông tin trả tiền"
                android:textAllCaps="true"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_16sp" />
        </RelativeLayout>


    </FrameLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <com.ems.dingdong.views.CustomTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#f5f6fa"
                android:padding="@dimen/dimen_10dp"
                android:text="BÊN ỦY THÁC DỊCH VỤ" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/dimen_10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <com.ems.dingdong.views.CustomTextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="0.7"
                        android:paddingTop="@dimen/dimen_10dp"
                        android:paddingBottom="@dimen/dimen_10dp"
                        android:text="Mã nghiệp vụ"
                        android:textColor="#253854"
                        android:textSize="@dimen/text_size_14sp" />


                    <com.ems.dingdong.views.CustomTextView
                        android:id="@+id/tvMabaohiem"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.3"
                        android:drawableRight="@drawable/icon_arrow_dropdown_down"
                        android:drawablePadding="10dp"
                        android:gravity="right"
                        android:paddingTop="@dimen/dimen_5dp"
                        android:paddingBottom="@dimen/dimen_5dp"
                        android:text="2110 - Chi hộ đối tượng BTXH SeaBank"
                        android:textColor="#253854"
                        android:textSize="@dimen/text_size_14sp" />
                </LinearLayout>

                <View
                    style="@style/Devider"
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:visibility="gone"
                    android:weightSum="2">

                    <com.ems.dingdong.views.CustomTextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="0.7"
                        android:paddingTop="@dimen/dimen_10dp"
                        android:paddingBottom="@dimen/dimen_10dp"
                        android:text="Tên dịch vụ"
                        android:textColor="#253854"
                        android:textSize="@dimen/text_size_14sp" />

                    <com.ems.dingdong.views.CustomTextView
                        android:id="@+id/tvTenBaohiem"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.3"
                        android:gravity="right"
                        android:paddingTop="@dimen/dimen_5dp"
                        android:paddingBottom="@dimen/dimen_5dp"
                        android:text="Chi hộ đối tượng BTXH"
                        android:textColor="#253854"
                        android:textSize="@dimen/text_size_14sp" />
                </LinearLayout>

                <View
                    style="@style/Devider"
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/llSeaBank"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <com.ems.dingdong.views.CustomTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#f5f6fa"
                    android:padding="@dimen/dimen_10dp"
                    android:text="THÔNG TIN TRẢ TIỀN" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/dimen_10dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="2">

                        <com.ems.dingdong.views.CustomTextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_weight="0.7"
                            android:paddingTop="@dimen/dimen_10dp"
                            android:paddingBottom="@dimen/dimen_10dp"
                            android:text="Số tham chiếu"
                            android:textColor="#253854"
                            android:textSize="@dimen/text_size_14sp" />

                        <com.ems.dingdong.views.CustomEditText
                            android:id="@+id/edt_reference"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_weight="1.3"
                            android:background="@color/transparent"
                            android:gravity="right"
                            android:hint="Chi hộ đối tượng BTXH"
                            android:inputType="text"
                            android:paddingTop="@dimen/dimen_5dp"
                            android:paddingBottom="@dimen/dimen_5dp"
                            android:textColor="#253854"
                            android:textSize="@dimen/text_size_14sp" />
                    </LinearLayout>

                    <View
                        style="@style/Devider"
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp" />

                    <com.ems.dingdong.views.CustomTextView
                        android:id="@+id/btn_check"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dimen_50dp"
                        android:layout_marginTop="@dimen/dimen_10dp"
                        android:background="@drawable/bg_gradient_radius_5"
                        android:gravity="center"
                        android:paddingLeft="@dimen/dimen_20dp"
                        android:paddingTop="@dimen/dimen_5dp"
                        android:paddingRight="@dimen/dimen_20dp"
                        android:paddingBottom="@dimen/dimen_5dp"
                        android:text="Kiểm tra"
                        android:textAllCaps="true"
                        android:textColor="@color/white"
                        android:textSize="@dimen/text_size_18sp" />
                </LinearLayout>
            </LinearLayout>


            <LinearLayout
                android:id="@+id/llVietinBank"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

                <com.ems.dingdong.views.CustomBoldTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/colorPrimary"
                    android:padding="@dimen/dimen_10dp"
                    android:textColor="@color/white"
                    android:text="THÔNG TIN" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/dimen_10dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:visibility="gone"
                        android:weightSum="2">

                        <com.ems.dingdong.views.CustomTextView
                            android:id="@+id/titleSodienthoaiGDV"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_weight="0.7"
                            android:paddingTop="@dimen/dimen_10dp"
                            android:paddingBottom="@dimen/dimen_10dp"
                            android:text="Số điện thoại giao dịch viên"
                            android:textColor="#253854"
                            android:textSize="@dimen/text_size_14sp" />

                        <com.ems.dingdong.views.CustomEditText
                            android:id="@+id/edtSodienthoaiGDV"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_weight="1.3"
                            android:background="@color/transparent"
                            android:gravity="right"
                            android:hint="Nhập số điện thoại giao dịch viên"
                            android:inputType="text"
                            android:paddingTop="@dimen/dimen_5dp"
                            android:paddingBottom="@dimen/dimen_5dp"
                            android:textColor="#253854"
                            android:textSize="@dimen/text_size_14sp" />
                    </LinearLayout>

                    <View
                        style="@style/Devider"
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:visibility="gone" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="2">

                        <com.ems.dingdong.views.CustomTextView
                            android:id="@+id/titleTenchuthe"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_weight="0.7"
                            android:paddingTop="@dimen/dimen_10dp"
                            android:paddingBottom="@dimen/dimen_10dp"
                            android:text="Tên chủ thẻ"
                            android:textColor="#253854"
                            android:textSize="@dimen/text_size_14sp" />

                        <com.ems.dingdong.views.CustomEditText
                            android:id="@+id/edtTenchuthe"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:layout_weight="1.3"
                            android:background="@color/primary"
                            android:gravity="left|center"
                            android:hint="Nhập tên chủ thẻ"
                            android:inputType="textCapCharacters"
                            android:paddingLeft="10dp"
                            android:paddingTop="@dimen/dimen_5dp"
                            android:paddingBottom="@dimen/dimen_5dp"
                            android:textColor="#253854"
                            android:textSize="18dp" />
                    </LinearLayout>

                    <View
                        style="@style/Devider"
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp" />


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="2">

                        <com.ems.dingdong.views.CustomTextView
                            android:id="@+id/titleSotaikhoan"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_weight="0.7"
                            android:paddingTop="@dimen/dimen_10dp"
                            android:paddingBottom="@dimen/dimen_10dp"
                            android:text="Số tài khoản ngân hàng"
                            android:textColor="#253854"
                            android:textSize="@dimen/text_size_14sp" />

                        <com.ems.dingdong.views.CustomEditText
                            android:id="@+id/edtSotaikhoan"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:layout_weight="1.3"
                            android:background="@color/primary"
                            android:gravity="left|center"
                            android:hint="Nhập số tài khoản ngân hàng"
                            android:inputType="number"
                            android:paddingLeft="10dp"
                            android:paddingTop="@dimen/dimen_5dp"
                            android:paddingBottom="@dimen/dimen_5dp"
                            android:textColor="#253854"

                            android:textSize="18dp" />
                    </LinearLayout>

                    <View
                        style="@style/Devider"
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="2">

                        <com.ems.dingdong.views.CustomTextView
                            android:id="@+id/titleSotienrut"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_weight="0.7"
                            android:paddingTop="@dimen/dimen_10dp"
                            android:paddingBottom="@dimen/dimen_10dp"
                            android:text="Số tiền rút"
                            android:textColor="#253854"
                            android:textSize="@dimen/text_size_14sp" />

                        <com.ems.dingdong.views.CustomEditText
                            android:id="@+id/edtSotienrut"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:layout_weight="1.3"
                            android:background="@color/primary"
                            android:gravity="left|center"
                            android:hint="Nhập số tiền rút"
                            android:inputType="number"
                            android:paddingLeft="10dp"
                            android:paddingTop="@dimen/dimen_5dp"
                            android:paddingBottom="@dimen/dimen_5dp"
                            android:textColor="#253854"
                            android:textSize="18dp" />
                    </LinearLayout>

                    <View
                        style="@style/Devider"
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="2">

                        <com.ems.dingdong.views.CustomTextView
                            android:id="@+id/titleSogiayto"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_weight="0.7"
                            android:paddingTop="@dimen/dimen_10dp"
                            android:paddingBottom="@dimen/dimen_10dp"
                            android:text="Số giấy tờ tuỳ thân"
                            android:textColor="#253854"
                            android:textSize="@dimen/text_size_14sp" />

                        <com.ems.dingdong.views.CustomEditText
                            android:id="@+id/edtSogiayto"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:layout_weight="1.3"
                            android:background="@color/primary"
                            android:gravity="left|center"
                            android:hint="Nhập số giấy tờ tuỳ thân"
                            android:inputType="number"
                            android:paddingLeft="10dp"
                            android:paddingTop="@dimen/dimen_5dp"
                            android:paddingBottom="@dimen/dimen_5dp"
                            android:textColor="#253854"
                            android:textSize="18dp" />
                    </LinearLayout>

                    <View
                        style="@style/Devider"
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="2">

                        <com.ems.dingdong.views.CustomTextView
                            android:id="@+id/titleSodienthoaiChuthe"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_weight="0.7"
                            android:paddingTop="@dimen/dimen_10dp"
                            android:paddingBottom="@dimen/dimen_10dp"
                            android:text="Số điện thoại chủ thẻ"
                            android:textColor="#253854"
                            android:textSize="@dimen/text_size_14sp" />

                        <com.ems.dingdong.views.CustomEditText
                            android:id="@+id/edtSodienthoaiChuthe"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:layout_weight="1.3"
                            android:background="@color/primary"
                            android:gravity="left|center"
                            android:hint="Số điện thoại chủ thẻ"
                            android:inputType="number"
                            android:paddingLeft="10dp"
                            android:paddingTop="@dimen/dimen_5dp"
                            android:paddingBottom="@dimen/dimen_5dp"
                            android:textColor="#253854"
                            android:textSize="18dp" />
                    </LinearLayout>

                    <View
                        style="@style/Devider"
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="2">

                        <com.ems.dingdong.views.CustomTextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_weight="0.7"
                            android:paddingTop="@dimen/dimen_10dp"
                            android:paddingBottom="@dimen/dimen_10dp"
                            android:text="Nội dung"
                            android:textColor="#253854"
                            android:textSize="@dimen/text_size_14sp" />

                        <com.ems.dingdong.views.CustomEditText
                            android:id="@+id/edtNoidung"
                            android:layout_width="0dp"
                            android:layout_height="100dp"
                            android:layout_weight="1.3"
                            android:background="@drawable/bg_radius_content_chiho"
                            android:gravity="left|top"
                            android:hint="Nhập nội dung"
                            android:inputType="textMultiLine"
                            android:padding="@dimen/dimen_5dp"
                            android:paddingLeft="10dp"
                            android:textColor="@color/black"
                            android:textSize="18dp" />
                    </LinearLayout>

                    <com.ems.dingdong.views.CustomTextView
                        android:id="@+id/btn_check_viettinbank"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dimen_50dp"
                        android:layout_marginTop="@dimen/dimen_10dp"
                        android:background="@drawable/bg_gradient_radius_5"
                        android:gravity="center"
                        android:paddingLeft="@dimen/dimen_20dp"
                        android:paddingTop="@dimen/dimen_5dp"
                        android:paddingRight="@dimen/dimen_20dp"
                        android:paddingBottom="@dimen/dimen_5dp"
                        android:text="Thanh toán"
                        android:textAllCaps="true"
                        android:textColor="@color/white"
                        android:textSize="@dimen/text_size_18sp" />
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</LinearLayout>
