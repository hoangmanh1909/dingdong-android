<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <FrameLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true">

        <include layout="@layout/item_head_bg_common" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/img_back"
                android:layout_width="@dimen/dimen_56dp"
                android:layout_height="@dimen/dimen_56dp"
                android:layout_centerVertical="true"
                android:padding="@dimen/dimen_10dp"
                android:src="@drawable/ic_back_shadown" />

            <com.ems.dingdong.views.CustomBoldTextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="Hoàn tất tin theo địa chỉ"
                android:textAllCaps="true"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_18sp" />
        </RelativeLayout>
    </FrameLayout>


    <!--android:visibility="gone"-->
    <com.ems.dingdong.views.CustomBoldTextView
        android:id="@+id/tv_parcel_code"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/dimen_100dp"
        android:gravity="center"
        android:textColor="@color/colorPrimary"
        android:textSize="@dimen/text_size_16sp"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dimen_10dp"
        android:gravity="right"
        android:orientation="horizontal"
        android:padding="@dimen/dimen_10dp"
        android:visibility="gone">

        <com.ems.dingdong.views.CustomTextView
            android:id="@+id/btn_confirm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_confirm_continue"
            android:drawableLeft="@drawable/ic_done"
            android:gravity="center"
            android:paddingLeft="@dimen/dimen_20dp"
            android:paddingTop="@dimen/dimen_5dp"
            android:paddingRight="@dimen/dimen_20dp"
            android:paddingBottom="@dimen/dimen_5dp"
            android:text="Xác nhận"
            android:textAllCaps="true"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_18sp" />

        <com.ems.dingdong.views.CustomTextView
            android:id="@+id/btn_reject"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_10dp"
            android:background="@drawable/bg_reject_continue"
            android:drawableLeft="@drawable/ic_cancel"
            android:gravity="center"
            android:paddingLeft="@dimen/dimen_20dp"
            android:paddingTop="@dimen/dimen_10dp"
            android:paddingRight="@dimen/dimen_20dp"
            android:paddingBottom="@dimen/dimen_10dp"
            android:text="Từ chối"
            android:textAllCaps="true"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_18sp" />
    </LinearLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_5dp"
            android:orientation="vertical">

            <com.ems.dingdong.views.CustomBoldTextView
                style="@style/HeaderNews"
                android:layout_width="match_parent"
                android:background="@drawable/bg_header_common"
                android:padding="@dimen/dimen_10dp"
                android:text="Địa chỉ thu gom"
                android:textColor="@color/white"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_white_radius_bottom_common"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <com.ems.dingdong.views.CustomTextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/_10sdp"
                        android:layout_weight="0.7"
                        android:paddingTop="@dimen/dimen_10dp"
                        android:paddingBottom="@dimen/dimen_10dp"
                        android:text="Người liên hệ"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_14sdp" />

                    <com.ems.dingdong.views.CustomTextView
                        android:id="@+id/tv_name_receiver"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.3"
                        android:gravity="end"
                        android:paddingTop="@dimen/dimen_10dp"
                        android:paddingBottom="@dimen/dimen_10dp"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_14sdp" />

                </LinearLayout>

                <View
                    style="@style/Devider"
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <com.ems.dingdong.views.CustomTextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/_10sdp"
                        android:layout_weight="0.7"
                        android:paddingTop="@dimen/dimen_10dp"
                        android:paddingBottom="@dimen/dimen_10dp"
                        android:text="Số điện thoại"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_14sdp" />

                    <com.ems.dingdong.views.CustomTextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.3"
                        android:paddingTop="@dimen/dimen_10dp"
                        android:paddingBottom="@dimen/dimen_10dp"
                        android:text=""
                        android:textColor="@color/black"
                        android:textSize="@dimen/_14sdp" />


                    <com.ems.dingdong.views.CustomTextView
                        android:id="@+id/tv_phone_receiver"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.0"
                        android:background="@drawable/bg_header_common"
                        android:drawableLeft="@drawable/ic_call"
                        android:gravity="end"
                        android:paddingTop="@dimen/dimen_10dp"
                        android:paddingBottom="@dimen/dimen_10dp"
                        android:text="0971842613"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_14sdp" />

                </LinearLayout>

                <View
                    style="@style/Devider"
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <com.ems.dingdong.views.CustomTextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/_10sdp"
                        android:layout_weight="0.7"
                        android:paddingTop="@dimen/dimen_10dp"
                        android:paddingBottom="@dimen/dimen_10dp"
                        android:text="Địa chỉ"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_14sdp" />

                    <com.ems.dingdong.views.CustomTextView
                        android:id="@+id/tv_address_receiver"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.3"
                        android:gravity="end"
                        android:paddingTop="@dimen/dimen_10dp"
                        android:paddingBottom="@dimen/dimen_10dp"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_14sdp" />

                </LinearLayout>

                <View
                    style="@style/Devider"
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp" />

            </LinearLayout>

            <com.ems.dingdong.views.CustomBoldTextView
                style="@style/HeaderNews"
                android:layout_width="match_parent"
                android:background="@drawable/bg_header_common"
                android:padding="@dimen/dimen_10dp"
                android:text="Hình thức thu gom"
                android:textColor="@color/white"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_white_radius_bottom_common"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <com.ems.dingdong.views.CustomTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingTop="@dimen/dimen_10dp"
                        android:paddingBottom="@dimen/dimen_10dp"
                        android:text="Tổng bưu gửi: "
                        android:textColor="@color/red_light"
                        android:textSize="@dimen/_14sdp" />

                    <com.ems.dingdong.views.CustomTextView
                        android:id="@+id/tv_parcel_codes"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingTop="@dimen/dimen_10dp"
                        android:paddingBottom="@dimen/dimen_10dp"
                        android:text=""
                        android:textColor="@color/red_light"
                        android:textSize="@dimen/_14sdp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <RadioGroup
                        android:id="@+id/radio_group"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.3"
                        android:orientation="vertical">

                        <RadioButton
                            android:id="@+id/rad_success"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:checked="true"
                            android:gravity="left|center"
                            android:paddingLeft="@dimen/dimen_5dp"
                            android:text="Thu gom thành công"
                            android:textSize="@dimen/_14sdp"
                            android:textStyle="bold" />

                        <RadioButton
                            android:id="@+id/rad_unsuccess"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="left|center"
                            android:paddingLeft="@dimen/dimen_5dp"
                            android:text="Thu gom không thành công"
                            android:textSize="@dimen/_14sdp"
                            android:textStyle="bold" />

                        <RadioButton
                            android:id="@+id/rad_failure"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="left|center"
                            android:paddingLeft="@dimen/dimen_5dp"
                            android:text="Lấy hàng thất bại"
                            android:textSize="@dimen/_14sdp"
                            android:textStyle="bold" />

                    </RadioGroup>


                </LinearLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/ll_success"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <com.ems.dingdong.views.CustomTextView
                        android:id="@+id/btn_sign"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="24dp"
                        android:background="@drawable/bg_gradient_radius_5"
                        android:gravity="center"
                        android:paddingLeft="@dimen/dimen_20dp"
                        android:paddingTop="@dimen/dimen_5dp"
                        android:paddingRight="@dimen/dimen_20dp"
                        android:paddingBottom="@dimen/dimen_5dp"
                        android:text="Ký gửi"
                        android:textAllCaps="true"
                        android:textColor="@color/white"
                        android:textSize="@dimen/text_size_18sp"
                        android:textStyle="bold"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <LinearLayout
                        android:id="@+id/ll_signed"
                        android:layout_width="0dp"
                        android:layout_height="300dp"
                        android:layout_marginTop="8dp"
                        android:orientation="horizontal"
                        android:visibility="gone"
                        app:layout_constraintEnd_toEndOf="@+id/btn_sign"
                        app:layout_constraintStart_toStartOf="@+id/btn_sign"
                        app:layout_constraintTop_toBottomOf="@+id/btn_sign"
                        tools:ignore="MissingConstraints">


                        <ImageView
                            android:id="@+id/img_sign"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:paddingLeft="@dimen/dimen_20dp"
                            android:paddingTop="@dimen/dimen_5dp"
                            android:paddingRight="@dimen/dimen_20dp"
                            android:paddingBottom="@dimen/dimen_5dp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="124dp"
                            android:layout_marginLeft="124dp"
                            android:layout_marginTop="268dp">

                        </LinearLayout>


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:orientation="horizontal"
                        app:layout_constraintStart_toStartOf="@+id/btn_sign"
                        app:layout_constraintTop_toBottomOf="@+id/ll_signed"
                        tools:ignore="MissingConstraints">

                        <ImageView
                            android:id="@+id/iv_camera_thu_gom"
                            android:layout_width="@dimen/dimen_70dp"
                            android:layout_height="@dimen/dimen_70dp"
                            android:layout_gravity="center_vertical"
                            android:src="@drawable/ic_camera_plus" />

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/recycler_image"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="16dp"
                            android:orientation="horizontal"
                            android:padding="@dimen/_5sdp" />

                    </LinearLayout>


                </androidx.constraintlayout.widget.ConstraintLayout>

                <LinearLayout
                    android:id="@+id/ll_unsuccess"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Chọn lý do"
                        android:textColor="@color/text_color_total_theme1"
                        android:textSize="@dimen/_14sdp"
                        android:textStyle="bold" />

                    <RadioGroup
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:layout_weight="1.3"
                        android:orientation="vertical">

                        <RadioButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="left|center"
                            android:paddingLeft="@dimen/dimen_5dp"
                            android:text="1. Khách hàng hẹn lại ngày lấy"
                            android:textSize="@dimen/_14sdp" />

                        <RadioButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="left|center"
                            android:paddingLeft="@dimen/dimen_5dp"
                            android:text="2. Khách hàng đi vắng"
                            android:textSize="@dimen/_14sdp" />

                        <RadioButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="left|center"
                            android:paddingLeft="@dimen/dimen_5dp"
                            android:text="3. Khách hàng chuyển đi nơi khác"
                            android:textSize="@dimen/_14sdp" />

                        <RadioButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="left|center"
                            android:paddingLeft="@dimen/dimen_5dp"
                            android:text="4. Hàng bị lỗi không giao"
                            android:textSize="@dimen/_14sdp" />

                        <RadioButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="left|center"
                            android:paddingLeft="@dimen/dimen_5dp"
                            android:text="5. Hàng chưa chuẩn bị xong"
                            android:textSize="@dimen/_14sdp" />

                    </RadioGroup>


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_failure"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Chọn lý do"
                        android:textColor="@color/text_color_total_theme1"
                        android:textSize="@dimen/_14sdp"
                        android:textStyle="bold" />

                    <RadioGroup
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:layout_weight="1.3"
                        android:orientation="vertical">

                        <RadioButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="left|center"
                            android:paddingLeft="@dimen/dimen_5dp"
                            android:text="1. hủy tin do lấy quá 3 lần không thành công"
                            android:textSize="@dimen/_14sdp" />

                        <RadioButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="left|center"
                            android:paddingLeft="@dimen/dimen_5dp"
                            android:text="2. Hủy tin do bưu cục không thu gom"
                            android:textSize="@dimen/_14sdp" />

                        <RadioButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="left|center"
                            android:paddingLeft="@dimen/dimen_5dp"
                            android:text="3. Hủy tin theo yêu cầu từ đối tác"
                            android:textSize="@dimen/_14sdp" />

                        <RadioButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="left|center"
                            android:paddingLeft="@dimen/dimen_5dp"
                            android:text="4. Hủy tin theo quy định"
                            android:textSize="@dimen/_14sdp" />

                        <RadioButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="left|center"
                            android:paddingLeft="@dimen/dimen_5dp"
                            android:text="5. Khác"
                            android:textSize="@dimen/_14sdp" />

                    </RadioGroup>


                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:layout_marginBottom="@dimen/dimen_10dp"
                    android:gravity="right"
                    android:orientation="horizontal"
                    android:padding="@dimen/dimen_10dp">

                    <com.ems.dingdong.views.CustomTextView
                        android:id="@+id/btn_confirms"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bg_confirm_continue"
                        android:drawableLeft="@drawable/ic_done"
                        android:gravity="center"
                        android:paddingLeft="@dimen/dimen_20dp"
                        android:paddingTop="@dimen/dimen_5dp"
                        android:paddingRight="@dimen/dimen_20dp"
                        android:paddingBottom="@dimen/dimen_5dp"
                        android:text="hoàn tất tin"
                        android:textAllCaps="true"
                        android:textColor="@color/white"
                        android:textSize="@dimen/text_size_18sp"
                        android:textStyle="bold" />


                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</LinearLayout>
