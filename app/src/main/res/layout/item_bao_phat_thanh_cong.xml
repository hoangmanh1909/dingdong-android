<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingTop="@dimen/dimen_5dp"
    android:paddingBottom="@dimen/dimen_5dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <com.ems.dingdong.views.CustomBoldTextView
                    android:id="@+id/tv_parcelCode"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginTop="@dimen/dimen_5dp"
                    android:gravity="center"
                    android:text="COD20180416"
                    android:textColor="#5f3075"
                    android:textSize="@dimen/text_size_14sp" />

                <ImageView
                    android:id="@+id/img_ContactPhone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/dimen_5dp"
                    android:layout_toRightOf="@+id/tv_parcelCode"
                    android:padding="5dp"
                    android:src="@drawable/ic_call_success" />
            </RelativeLayout>


            <com.ems.dingdong.views.CustomTextView
                android:id="@+id/tv_receiverName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_5dp"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_14sp"
                tools:text="Tên người nhận: " />

            <com.ems.dingdong.views.CustomTextView
                android:id="@+id/tv_receiver_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_5dp"
                android:textColor="@color/grey"
                android:textSize="@dimen/text_size_12sp"
                tools:text="TRAN THAI TONG" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <com.ems.dingdong.views.CustomTextView
                android:id="@+id/tv_collect_amount_all"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_5dp"
                android:gravity="right"
                android:text="Tổng tiền thu hộ: "
                android:textColor="@color/grey"
                android:textSize="@dimen/text_size_12sp" />

            <com.ems.dingdong.views.CustomTextView
                android:id="@+id/tv_note"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_5dp"
                android:gravity="right"
                android:text="Ghi chú phát: "
                android:textColor="@color/grey"
                android:textSize="@dimen/text_size_12sp" />

            <!--<RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5sdp"
                android:orientation="horizontal">

                <com.ems.dingdong.views.CustomTextView
                    android:id="@+id/tv_ContactPhone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_gradient_search"
                    android:drawableLeft="@drawable/ic_call_success"
                    android:gravity="center"
                    android:padding="@dimen/_2sdp"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_14sp" />

            </RelativeLayout>-->
        </LinearLayout>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.ems.dingdong.views.CustomTextView
            android:id="@+id/tv_services"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_5dp"
            android:layout_marginRight="@dimen/dimen_10dp"
            android:background="@drawable/bg_gradient_search"
            android:paddingLeft="@dimen/_5sdp"
            android:paddingRight="@dimen/_5sdp"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_14sp"
            tools:text="COD" />
        <!-- <ImageView
             android:id="@+id/iv_status"
             android:layout_width="30dp"
             android:layout_height="30dp"
             android:src="@drawable/ic_star" />-->

        <ImageView
            android:id="@+id/img_clear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_clear_black" />
    </RelativeLayout>

    <!-- <View
         style="@style/Devider"
         android:layout_marginTop="@dimen/dimen_5dp" />-->
</LinearLayout>