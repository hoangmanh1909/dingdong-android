<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="@dimen/dimen_5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <CheckBox
            android:id="@+id/cb_selected_parcel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_marginStart="0dp"
            android:layout_marginLeft="0dp" />

        <com.ems.dingdong.views.CustomTextView
            android:id="@+id/tv_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="0dp"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="@dimen/dimen_5dp"
            android:layout_toStartOf="@+id/img_remove"
            android:layout_toLeftOf="@+id/img_remove"
            android:layout_toEndOf="@+id/cb_selected_parcel"
            android:layout_toRightOf="@+id/cb_selected_parcel"
            android:gravity="center|left"
            android:paddingLeft="@dimen/dimen_8dp"
            android:textColor="@color/blue"
            android:textSize="@dimen/text_size_14sp"
            tools:text="1234567890" />

        <ImageView
            android:id="@+id/img_remove_lading_code"
            android:layout_width="wrap_content"
            android:src="@drawable/ic_clear_black"
            android:layout_alignParentRight="true"
            android:layout_height="wrap_content"/>
    </RelativeLayout>
    <View
        style="@style/Devider"
        android:layout_marginTop="@dimen/dimen_5dp" />

</LinearLayout>