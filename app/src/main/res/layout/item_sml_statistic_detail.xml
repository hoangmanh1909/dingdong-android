<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/_8sdp"
        android:background="@color/selector"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/_2sdp"
            android:text="Mã bưu gửi"
            android:textAllCaps="true"
            android:textColor="@color/blue" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/_2sdp">

            <TextView
                android:id="@+id/tv_hub"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tủ"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/tv_cod"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:text="Số tiền COD" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/_2sdp">

            <TextView
                android:id="@+id/tv_amount_ppa"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Số tiền PPA" />

            <TextView
                android:id="@+id/tv_amount_c"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:text="Số tiền C" />
        </RelativeLayout>
    </LinearLayout>

    <View style="@style/Devider" />
</LinearLayout>