<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp"
    android:orientation="horizontal">

    <RelativeLayout
        android:id="@+id/rightToLeft"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginRight="10dp">

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/iv_package"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:scaleType="center"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:placeholderImage="@drawable/ic_logo_instagram"
            app:placeholderImageScaleType="centerInside"
            app:roundedCornerRadius="10dp"
            app:viewAspectRatio="1" />

        <ImageView
            android:id="@+id/iv_delete"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_marginLeft="75dp"
            android:layout_marginTop="5dp"
            app:layout_constraintBottom_toBottomOf="@+id/iv_package"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="@+id/iv_package"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0"
            app:srcCompat="@drawable/ic_frame_113" />
    </RelativeLayout>

    <ImageView
        android:id="@+id/iv_camera_plus"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        android:layout_marginRight="@dimen/size_10dp"
        android:src="@drawable/ic_upload_photos" />

</LinearLayout>