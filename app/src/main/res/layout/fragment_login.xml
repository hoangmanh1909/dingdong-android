<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="@drawable/bg_gradient_color"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical">


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true"
            android:scrollbars="none">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="64dp"
                        android:src="@drawable/ic_logo" />

                    <com.vinatti.dingdong.views.CustomTextView
                        android:id="@+id/tv_status"
                        android:layout_width="wrap_content"
                        android:text="Xác thực ứng dụng lần đầu sử dụng"
                        android:textColor="@color/white"
                        android:textSize="@dimen/text_size_18sp"
                        android:layout_gravity="center"
                        android:layout_height="wrap_content" />

                    <com.facebook.drawee.view.SimpleDraweeView
                        android:id="@+id/my_image_view"
                        android:layout_width="130dp"
                        android:layout_height="130dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="@dimen/dimen_10dp"
                        fresco:placeholderImage="@drawable/ic_validation"
                        fresco:roundAsCircle="true" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:paddingLeft="@dimen/size_20dp"
                        android:paddingTop="@dimen/size_16dp"
                        android:paddingRight="@dimen/size_20dp">

                        <com.vinatti.dingdong.views.CustomMediumTextView
                            android:id="@+id/tv_phone"
                            android:visibility="gone"
                            android:layout_width="wrap_content"
                            android:text="0987654321"
                            android:textColor="@color/white"
                            android:textSize="@dimen/text_size_18sp"
                            android:layout_gravity="center"
                            android:layout_height="wrap_content" />

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="24dp"
                            android:orientation="vertical">


                            <LinearLayout
                                android:id="@+id/login_layout"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@drawable/bg_login"
                                android:gravity="center"
                                android:orientation="horizontal"
                                android:paddingTop="@dimen/size_12dp"
                                android:paddingBottom="@dimen/size_12dp">

                                <ImageView
                                    android:layout_width="@dimen/dimen_25dp"
                                    android:layout_height="@dimen/size_15dp"
                                    android:layout_gravity="center_vertical"
                                    android:src="@drawable/ic_done" />

                                <com.vinatti.dingdong.views.CustomTextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:layout_marginLeft="@dimen/dimen_8dp"
                                    android:text="@string/title_login"
                                    android:textAllCaps="true"
                                    android:textColor="@android:color/white"
                                    android:textSize="@dimen/text_size_14sp" />


                            </LinearLayout>


                        </RelativeLayout>


                    </LinearLayout>

                </LinearLayout>

                <com.vinatti.dingdong.views.CustomTextView
                    android:id="@+id/tv_version"
                    style="@style/st_gray.h3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginRight="@dimen/size_30dp"
                    android:layout_marginBottom="@dimen/dimen_5dp"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_12sp"
                    android:visibility="visible" />
            </RelativeLayout>


        </ScrollView>

    </LinearLayout>

</FrameLayout>
