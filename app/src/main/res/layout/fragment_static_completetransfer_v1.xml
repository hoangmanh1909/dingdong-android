<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F2F3F5"
    android:orientation="vertical">

    <FrameLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true">

        <include layout="@layout/item_head_bg_common" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/img_back"
                android:layout_width="@dimen/dimen_56dp"
                android:layout_height="@dimen/dimen_56dp"
                android:layout_centerVertical="true"
                android:padding="@dimen/dimen_10dp"
                android:src="@drawable/ic_back_shadown" />

            <TextView
                android:id="@+id/tv_title"
                style="@style/textStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:fontFamily="@font/inter_semibold"
                android:text="Quản lý nhập chuyển hoàn"
                android:textAllCaps="true"
                android:textColor="@color/white" />
        </RelativeLayout>
    </FrameLayout>


    <com.astuetz.PagerSlidingTabStrip
        android:id="@+id/tabs"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/header"
        app:pstsDividerColor="@color/text_color_primary"
        app:pstsDividerWidth="1dp"
        app:pstsIndicatorColor="#0e7959"
        app:pstsShouldExpand="true"
        app:pstsTabBackground="@drawable/bg_tabs"
        app:pstsTabTextAllCaps="false"
        app:pstsTabTextAlpha="100"
        app:pstsTabTextColor="@color/black"
        app:pstsTabTextSize="14dp"
        app:pstsTabTextStyle="bold"
        app:pstsUnderlineColor="@color/colorWhite" />

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/tabs" />


    <LinearLayout
        android:id="@+id/ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/tv_search"
            android:layout_width="@dimen/dimen_70dp"
            android:layout_height="@dimen/dimen_70dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_gravity="right"
            android:background="?attr/selectableItemBackground"
            android:padding="@dimen/dimen_10dp"
            android:src="@drawable/ic_choose_calendar" />

    </LinearLayout>
</RelativeLayout>