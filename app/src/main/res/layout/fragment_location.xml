                                android:paddingLeft="@dimen/dimen_10dp"
                                android:paddingTop="@dimen/dimen_10dp"
                                android:paddingBottom="@dimen/dimen_10dp"
                                android:textColor="@color/white"
                                android:textSize="@dimen/text_size_16sp"
                                android:textStyle="bold" />

                        </LinearLayout>

                        <View
                            style="@style/Devider"
                            android:layout_width="match_parent"
                            android:layout_height="0.5dp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:weightSum="2">

                            <com.ems.dingdong.views.CustomTextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="0.8"
                                android:paddingTop="@dimen/dimen_10dp"
                                android:paddingBottom="@dimen/dimen_10dp"
                                android:text="Địa chỉ"
                                android:textColor="@color/black"
                                android:textSize="@dimen/text_size_14sp" />

                            <com.ems.dingdong.views.CustomTextView
                                android:id="@+id/tv_SenderAddress"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1.2"
                                android:paddingTop="@dimen/dimen_10dp"
                                android:paddingBottom="@dimen/dimen_10dp"
                                android:textColor="@color/black"
                                android:textSize="@dimen/text_size_14sp" />

                        </LinearLayout>


                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_5dp"
                    android:orientation="vertical">

                    <com.ems.dingdong.views.CustomBoldTextView
                        style="@style/HeaderNews"
                        android:layout_width="match_parent"
                        android:background="@drawable/bg_gradient_top"
                        android:padding="@dimen/dimen_10dp"
                        android:text="THÔNG TIN NGƯỜI NHẬN"
                        android:textColor="@color/white" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bg_white_radius_bottom_common"
                        android:orientation="vertical">

                        <LinearLayout
