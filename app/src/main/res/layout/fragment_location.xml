                                android:layout_weight="0.8"
                                android:paddingTop="@dimen/dimen_10dp"
                                android:paddingBottom="@dimen/dimen_10dp"
                                android:text="Họ tên"
                                android:textColor="@color/black"
                                android:textSize="@dimen/text_size_14sp" />

                            <com.ems.dingdong.views.CustomTextView
                                android:id="@+id/tv_receiverName"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1.2"
                                android:paddingTop="@dimen/dimen_10dp"
                                android:paddingBottom="@dimen/dimen_10dp"
                                android:textColor="@color/black"
                                android:textSize="@dimen/text_size_14sp" />

                        </LinearLayout>

                        <View
                            style="@style/Devider"
                            android:layout_width="match_parent"
                            android:layout_height="0.5dp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:weightSum="2">

                            <com.ems.dingdong.views.CustomTextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_weight="0.8"
                                android:paddingTop="@dimen/dimen_10dp"
                                android:paddingBottom="@dimen/dimen_10dp"
                                android:text="Số điện thoại"
                                android:textColor="@color/black"
                                android:textSize="@dimen/text_size_14sp" />

                            <com.ems.dingdong.views.CustomTextView
                                android:id="@+id/tv_ReceiverPhone"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_weight="1.2"
                                android:background="@drawable/bg_gradient_search"
                                android:drawableLeft="@drawable/ic_tel"
                                android:gravity="center"
                                android:paddingLeft="@dimen/dimen_10dp"
                                android:paddingTop="@dimen/dimen_10dp"
                                android:paddingBottom="@dimen/dimen_10dp"
                                android:textColor="@color/white"
                                android:textSize="@dimen/text_size_14sp"
                                android:textStyle="bold" />

                        </LinearLayout>

                        <View
                            style="@style/Devider"
                            android:layout_width="match_parent"
                            android:layout_height="0.5dp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:weightSum="2">

                            <com.ems.dingdong.views.CustomTextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="0.8"
                                android:paddingTop="@dimen/dimen_10dp"
                                android:paddingBottom="@dimen/dimen_10dp"
                                android:text="Người nhận thực"
                                android:textColor="@color/black"
                                android:textSize="@dimen/text_size_14sp" />

                            <com.ems.dingdong.views.CustomTextView
                                android:id="@+id/tv_realReceiverName"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1.2"
                                android:paddingTop="@dimen/dimen_10dp"
                                android:paddingBottom="@dimen/dimen_10dp"
                                android:textColor="@color/black"
                                android:textSize="@dimen/text_size_14sp" />

                        </LinearLayout>

                        <View
                            style="@style/Devider"
                            android:layout_width="match_parent"
                            android:layout_height="0.5dp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:weightSum="2">

                            <com.ems.dingdong.views.CustomTextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="0.8"
                                android:paddingTop="@dimen/dimen_10dp"
                                android:paddingBottom="@dimen/dimen_10dp"
                                android:text="Địa chỉ"
                                android:textColor="@color/black"
                                android:textSize="@dimen/text_size_14sp" />

                            <com.ems.dingdong.views.CustomTextView
                                android:id="@+id/tv_receiverAddress"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1.2"
                                android:paddingTop="@dimen/dimen_10dp"
                                android:paddingBottom="@dimen/dimen_10dp"
                                android:textColor="@color/black"
                                android:textSize="@dimen/text_size_14sp" />

                        </LinearLayout>

                        <View
                            style="@style/Devider"
                            android:layout_width="match_parent"
                            android:layout_height="0.5dp" />

                        <LinearLayout
                            android:id="@+id/ll_sign"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:weightSum="2">

                            <com.ems.dingdong.views.CustomTextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="0.8"
                                android:paddingTop="@dimen/dimen_10dp"
                                android:paddingBottom="@dimen/dimen_10dp"
                                android:text="Chữ ký"
                                android:textColor="@color/black"
                                android:textSize="@dimen/text_size_14sp" />

                            <com.facebook.drawee.view.SimpleDraweeView
                                android:id="@+id/img_sign"
                                android:layout_width="0dp"
                                android:layout_height="@dimen/_120sdp"
                                android:layout_gravity="center"
                                android:layout_weight="1.2"
                                android:gravity="center"
                                android:paddingTop="@dimen/dimen_10dp"
                                android:paddingBottom="@dimen/dimen_10dp"
                                android:textColor="@color/white"
                                android:textSize="@dimen/text_size_16sp" />

                        </LinearLayout>


                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_status"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_5dp"
                    android:orientation="vertical">

                    <com.ems.dingdong.views.CustomBoldTextView
                        style="@style/HeaderNews"
                        android:layout_width="match_parent"
                        android:background="@drawable/bg_gradient_top"
                        android:padding="@dimen/dimen_10dp"
                        android:text="THÔNG TIN TRẠNG THÁI"
                        android:textColor="@color/white" />

                    <LinearLayout
