<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:layout_marginTop="@dimen/dimen_10dp"
    android:background="@color/white"
    android:orientation="vertical"
    app:cardCornerRadius="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/md_grey_200"
            android:padding="5dp">

            <TextView
                android:id="@+id/tv_parcel_code"
                style="@style/textStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dp"
                android:layout_toLeftOf="@id/tv_status_name"
                android:text="MHS : 123123123155"
                android:textColor="@color/md_blue_700"
                android:textSize="16dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_status_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                android:layout_weight="0.2"
                android:background="@drawable/bg_border_cam"
                android:gravity="center"
                android:paddingLeft="20dp"
                android:paddingTop="5dp"
                android:paddingRight="20dp"
                android:paddingBottom="5dp"
                android:textColor="@color/orange" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="10">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_count"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_14sp"
                    android:visibility="gone"
                    tools:text="10.000" />

                <TextView
                    android:id="@+id/tv_receiver_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/dimen_5dp"
                    android:drawableLeft="@drawable/ic_outline_person_outline_24"
                    android:drawablePadding="10dp"
                    android:gravity="center|left"
                    android:paddingLeft="5dp"
                    android:textColor="@color/black"
                    android:textSize="14dp"
                    tools:text="10.000" />

                <TextView
                    android:id="@+id/tv_receiver_address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_5dp"
                    android:drawableLeft="@drawable/ic_outline_location_on_24"
                    android:drawablePadding="10dp"
                    android:gravity="center|left"
                    android:paddingLeft="5dp"
                    android:textColor="@color/black"
                    android:textSize="14dp"
                    tools:text="10.000" />

                <TextView
                    android:id="@+id/tv_reason"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="@dimen/dimen_5dp"
                    android:drawableLeft="@drawable/ic_outline_note_24"
                    android:drawablePadding="10dp"
                    android:gravity="left|center"
                    android:textColor="@color/black"
                    android:textSize="14dp"
                    tools:text="10.000" />

                <TextView
                    android:id="@+id/tv_delivery_date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="@dimen/dimen_5dp"
                    android:drawableLeft="@drawable/ic_baseline_calendar_month_24"
                    android:drawablePadding="10dp"
                    android:gravity="left|center"
                    android:textColor="@color/black"
                    android:textSize="14dp"
                    tools:text="10.000" />

                <TextView
                    android:id="@+id/tv_amount"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawablePadding="10dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="@dimen/dimen_5dp"
                    android:drawableLeft="@drawable/ic_outline_monetization_on_24"
                    android:gravity="left|center"
                    android:textColor="@color/red_light"
                    android:textSize="14dp"
                    android:textStyle="bold"
                    android:visibility="visible"
                    tools:text="10.000" />

                <TextView
                    android:id="@+id/tv_status_paypost"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_5dp"
                    android:paddingLeft="5dp"
                    android:textColor="@color/black"
                    android:textSize="14dp"
                    tools:text="10.000" />


            </LinearLayout>


        </LinearLayout>


    </LinearLayout>
</androidx.cardview.widget.CardView>