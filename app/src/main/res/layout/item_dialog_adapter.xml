<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_linlayout_"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/selectableItemBackground"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_linlayout_title"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:layout_centerInParent="true"
        android:layout_toEndOf="@+id/img_motaikhoan"
        android:gravity="center|left"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img_title"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:padding="5dp"
            android:src="@drawable/seabank" />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center|left"
            android:text="Tài khoản thấu chi NHTM"
            android:textColor="@color/bg_blue_primary"
            android:textStyle="bold" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/ll_seabank_motaikhoan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img_motaikhoan"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:padding="5dp"
            android:src="@drawable/seabank" />

        <LinearLayout
            android:id="@+id/ll_linlayout"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:layout_centerInParent="true"
            android:layout_marginLeft="10dp"
            android:layout_toEndOf="@+id/img_motaikhoan"
            android:gravity="center|left"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_sotaikhoan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="xxxx xxxx xxxx 9999"
                android:textColor="@color/black"
                android:textStyle="bold" />


        </LinearLayout>

    </RelativeLayout>
</LinearLayout>