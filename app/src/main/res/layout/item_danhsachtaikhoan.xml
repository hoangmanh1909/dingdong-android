<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="2">

        <CheckBox
            android:id="@+id/cb_selected"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginRight="10dp"
            android:layout_weight="0.3"
            android:button="@drawable/custom_btn_radio" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.7"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Họ và tên:"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/tv_hovaten"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="@color/home_line" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Số tài khoản thấu chi: "
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/tv_sotaikhoanthauchi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ten"
                    android:textColor="@color/home_line" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Hạn mức: "
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/tv_hanmuc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="@color/red_light" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ngày hết hạn: "
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/tv_ngayhethan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ngày hết hạn: "
                    android:textColor="@color/home_line" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>