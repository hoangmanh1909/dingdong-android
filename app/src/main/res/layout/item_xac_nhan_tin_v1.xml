<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ll_CardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    android:layout_marginBottom="8dp"
    android:background="@drawable/bg_border"
    app:cardCornerRadius="5dp">

    <LinearLayout
        android:id="@+id/ll_background"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="10">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <CheckBox
                        android:id="@+id/cb_selected"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center"
                        android:layout_marginLeft="5dp"
                        android:button="@drawable/custom_btn_check" />

                    <com.ems.dingdong.views.CustomTextView
                        android:id="@+id/tv_stt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center"
                        android:layout_toRightOf="@+id/cb_selected"
                        android:paddingLeft="5dp"
                        android:textColor="@color/black"
                        android:textSize="14dp"
                        tools:text="1" />

                    <com.ems.dingdong.views.CustomTextView
                        android:id="@+id/tv_status"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_gravity="right"
                        android:layout_marginTop="5dp"
                        android:layout_marginRight="@dimen/_5sdp"
                        android:background="@drawable/bg_status_not"
                        android:gravity="center"
                        android:padding="@dimen/_5sdp"
                        android:textColor="@color/white"
                        android:textSize="@dimen/text_size_12sp"
                        tools:text="Chưa Xác nhận" />
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2">


                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tv_code"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        android:layout_weight="1.8"
                        android:drawableLeft="@drawable/barcode_ioicon"
                        android:drawablePadding="5dp"
                        android:gravity="center|left"
                        android:paddingLeft="7dp"
                        android:textColor="#007AFF"
                        android:textSize="14dp"
                        android:textStyle="bold"
                        tools:text="1234567890" />


                    <ImageView
                        android:id="@+id/img_logo"
                        android:layout_width="0dp"
                        android:layout_height="24dp"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center"
                        android:layout_weight="0.2"
                        android:src="@drawable/ic_outline_file_copy_24" />

                </LinearLayout>

                <com.ems.dingdong.views.CustomTextView
                    android:id="@+id/tv_ParcelCode"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"

                    android:gravity="center|left"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:text="Click để xem danh sách bưu gửi >>"
                    android:textColor="@color/tx_blue_link"
                    android:textSize="@dimen/text_size_12sp"
                    android:visibility="gone" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recycler"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <com.ems.dingdong.views.CustomTextView
                    android:id="@+id/tv_sodonhang"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/leaf_ioicon"
                    android:drawablePadding="5dp"
                    android:gravity="center|left"
                    android:paddingLeft="5dp"
                    android:text="asdasd"
                    android:textColor="@color/blackgray"
                    android:textSize="14dp" />

                <com.ems.dingdong.views.CustomTextView
                    android:id="@+id/tv_customName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="2dp"
                    android:drawableLeft="@drawable/people_circle_iocon"
                    android:drawablePadding="5dp"
                    android:gravity="center|left"
                    android:paddingLeft="5dp"
                    android:textColor="@color/blackgray"
                    android:textSize="14dp"
                    tools:text="Trần Văn Anh" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="2dp"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <com.ems.dingdong.views.CustomTextView
                        android:id="@+id/tv_contactName"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1.8"
                        android:drawableLeft="@drawable/person_ioicon"
                        android:drawablePadding="5dp"
                        android:gravity="center|left"
                        android:paddingLeft="5dp"
                        android:textColor="@color/blackgray"
                        android:textSize="14dp"
                        tools:text="Trần Văn Anh" />

                    <ImageView
                        android:id="@+id/img_chat"
                        android:layout_width="0dp"
                        android:layout_height="30dp"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center"
                        android:layout_weight="0.2"
                        android:src="@drawable/chatbubbles" />
                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">


                    <com.ems.dingdong.views.CustomTextView
                        android:id="@+id/tv_recycler"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv_ParcelCode"
                        android:layout_marginLeft="5dp"
                        android:gravity="center|left"
                        android:paddingTop="5dp"
                        android:paddingBottom="5dp"
                        android:text="Click để xem danh sách bưu gửi >>"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_size_12sp"
                        android:visibility="gone" />


                </RelativeLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">


                    <ScrollView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/tv_contact_description"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:maxLines="3"
                            android:scrollbars = "vertical"
                            android:fadeScrollbars="false"
                            android:drawableLeft="@drawable/document_text_ioicon"
                            android:drawablePadding="5dp"
                            android:gravity="left|center"
                            android:paddingLeft="5dp"
                            android:textColor="@color/blackgray"
                            android:textSize="14dp"
                            tools:text="Mô tả" />
                    </ScrollView>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <com.ems.dingdong.views.CustomTextView
                            android:id="@+id/tv_contact_address"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:drawableLeft="@drawable/location_ioicon"
                            android:drawablePadding="5dp"
                            android:gravity="left|center"
                            android:paddingLeft="5dp"
                            android:textColor="@color/blackgray"
                            android:textSize="14dp"
                            tools:text="241, Xuân Thủy, Cầu Giấy /asdasdasdn asdkjhagsdkjha" />

                        <ImageView
                            android:id="@+id/iv_status"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/_5sdp"
                            android:src="@drawable/ic_check_v2"
                            android:visibility="gone" />
                    </LinearLayout>


                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <com.ems.dingdong.views.CustomTextView
            android:id="@+id/tv_thoi_gian"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginRight="@dimen/_10sdp"
            android:drawableLeft="@drawable/stopwatch_ioicon"
            android:drawablePadding="5dp"
            android:gravity="center|left"
            android:paddingLeft="5dp"
            android:text="12:21"
            android:textColor="@color/blackgray"
            android:textSize="14dp" />


    </LinearLayout>
</LinearLayout>