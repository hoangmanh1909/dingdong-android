<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#80000000"
    android:clickable="true"
    android:focusable="true">
    <ImageView
        android:id="@+id/btnBack"
        android:layout_width="@dimen/size_50dp"
        android:layout_height="@dimen/size_50dp"
        android:layout_alignParentRight="true"
        android:layout_margin="@dimen/size_10dp"
        android:src="@drawable/ic_cancel" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_margin="@dimen/size_16dp"
        android:layout_marginTop="@dimen/dimen_5dp"
        android:orientation="vertical">

        <com.ems.dingdong.views.CustomBoldTextView
            style="@style/HeaderNews"
            android:layout_width="match_parent"
            android:background="@drawable/bg_header_common"
            android:padding="@dimen/dimen_10dp"
            android:text="BÁO PHÁT"
            android:textColor="@color/white" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_white_radius_bottom_common"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_10dp"
                android:orientation="horizontal"
                android:weightSum="2">

                <com.ems.dingdong.views.CustomTextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.7"
                    android:text="Kết quả"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_14sp" />

                <RadioGroup
                    android:id="@+id/radio_group"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.3"
                    android:orientation="vertical">

                    <RadioButton
                        android:id="@+id/rad_success"
                        style="@style/CustomRadioButtonStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="true"
                        android:gravity="left|center"
                        android:paddingLeft="@dimen/dimen_5dp"
                        android:text="Thành công"
                        android:textColor="@color/blue" />

                    <RadioButton
                        android:id="@+id/rad_fail"
                        style="@style/CustomRadioButtonStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dimen_5dp"
                        android:gravity="left|center"
                        android:paddingLeft="@dimen/dimen_5dp"
                        android:text="Không thành công"
                        android:textColor="@color/blue" />

                </RadioGroup>
            </LinearLayout>

            <com.ems.dingdong.views.CustomMediumTextView
                android:id="@+id/tv_update"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginTop="@dimen/dimen_10dp"
                android:background="@drawable/bg_confirm"
                android:drawableLeft="@drawable/ic_done"
                android:gravity="center"
                android:paddingLeft="@dimen/dimen_10dp"
                android:paddingTop="@dimen/dimen_5dp"
                android:paddingRight="@dimen/dimen_10dp"
                android:paddingBottom="@dimen/dimen_5dp"
                android:text="Chọn"
                android:textAllCaps="true"
                android:textColor="@color/white"
                android:textSize="16sp" />
        </LinearLayout>

    </LinearLayout>
</RelativeLayout>