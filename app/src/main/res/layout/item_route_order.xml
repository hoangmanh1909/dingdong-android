<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/dimen_10dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/_6sdp">

                <com.ems.dingdong.views.CustomBoldTextView
                    android:id="@+id/tv_code"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/blue"
                    android:text="E"
                    android:textSize="@dimen/text_size_16sp" />

                <com.ems.dingdong.views.CustomTextView
                    android:id="@+id/tv_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="5dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:text="Chờ nhận"
                    android:textColor="@color/color_939393"
                    android:textSize="@dimen/text_size_14sp" />
            </RelativeLayout>

            <com.ems.dingdong.views.CustomTextView
                android:padding="@dimen/_2sdp"
                android:id="@+id/tv_start_route"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/grey"
                android:textSize="@dimen/text_size_14sp" />

            <com.ems.dingdong.views.CustomTextView
                android:id="@+id/tv_start_postman"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/_2sdp"
                android:textColor="@color/grey"
                android:textSize="@dimen/text_size_14sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="10">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="5">

                    <com.ems.dingdong.views.CustomTextView
                        android:id="@+id/tv_cancel"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dimen_5dp"
                        android:layout_weight="2.5"
                        android:background="@drawable/bg_button_cancel"
                        android:gravity="center"
                        android:padding="5dp"
                        android:text="Từ chối"
                        android:textColor="@color/white"
                        android:textSize="@dimen/text_size_14sp" />

                    <com.ems.dingdong.views.CustomTextView
                        android:id="@+id/tv_approved"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dimen_5dp"
                        android:layout_marginTop="@dimen/dimen_5dp"
                        android:layout_weight="2.5"
                        android:background="@drawable/bg_button_approve"
                        android:gravity="center"
                        android:padding="5dp"
                        android:text="Chấp nhận"
                        android:textColor="@color/white"
                        android:textSize="@dimen/text_size_14sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="5">

                    <com.ems.dingdong.views.CustomTextView
                        android:id="@+id/tv_date_time"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dimen_5dp"
                        android:layout_weight="5"
                        android:gravity="right"
                        android:padding="3dp"
                        android:textColor="@color/grey"
                        android:textSize="@dimen/text_size_14sp" />
                </LinearLayout>


            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

    <View
        style="@style/Devider"
        android:layout_marginTop="@dimen/dimen_5dp"
        android:layout_marginBottom="@dimen/dimen_10dp" />

</LinearLayout>