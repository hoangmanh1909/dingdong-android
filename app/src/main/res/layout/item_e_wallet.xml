<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:id="@+id/rootView"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/_5sdp"
    android:paddingStart="@dimen/_10sdp"
    android:paddingEnd="@dimen/_10sdp">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/img_wallet"
        android:layout_width="@dimen/_44sdp"
        android:layout_height="@dimen/_36sdp"
        android:paddingStart="@dimen/_5sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:src="@drawable/postpay"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_name_wallet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_10sdp"
        android:text="Ví điện tử PayPost"
        android:textColor="#2D2D2D"
        android:textSize="@dimen/_11sdp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@id/img_wallet"
        app:layout_constraintTop_toTopOf="@id/img_wallet"
        app:layout_constraintBottom_toBottomOf="@id/img_wallet"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/status_wallet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_10sdp"
        android:text="Đã liên kết"
        android:textColor="@color/green_border"
        android:textStyle="italic"
        android:textSize="@dimen/_11sdp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/tv_name_wallet" />


    <View
        android:layout_marginTop="@dimen/_10sdp"
        app:layout_constraintTop_toBottomOf="@id/img_wallet"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#A3A1A1"/>
</androidx.constraintlayout.widget.ConstraintLayout>
