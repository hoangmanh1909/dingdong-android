<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingTop="@dimen/dimen_5dp"
    android:paddingBottom="@dimen/dimen_5dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">


        <CheckBox
            android:id="@+id/cb_selected"
            android:button="@drawable/custom_btn_radio"
            android:layout_margin="@dimen/dimen_8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center">

                <com.ems.dingdong.views.CustomBoldTextView
                    android:id="@+id/tv_code"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:gravity="center"
                    android:text="COD20180416"
                    android:textColor="@color/blue"
                    android:textSize="@dimen/text_size_16sp" />

                <ImageView
                    android:id="@+id/img_ContactPhone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/dimen_5dp"
                    android:layout_alignParentRight="true"
                    android:padding="5dp"
                    android:src="@drawable/ic_call" />
            </RelativeLayout>

            <com.ems.dingdong.views.CustomTextView
                android:id="@+id/tv_receiver"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Người nhận: "
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_12sp" />

            <com.ems.dingdong.views.CustomTextView
                android:id="@+id/tv_sender"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Người gửi: "
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_12sp" />

            <com.ems.dingdong.views.CustomTextView
                android:id="@+id/tv_weight"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Khối lượng:"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_12sp" />

            <com.ems.dingdong.views.CustomTextView
                android:id="@+id/tv_COD"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Số tiền COD:"
                android:textColor="@color/red_light"
                android:textSize="@dimen/text_size_12sp" />

            <com.ems.dingdong.views.CustomTextView
                android:id="@+id/tv_fee"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Số tiền cước:"
                android:textColor="@color/red_light"
                android:textSize="@dimen/text_size_12sp" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>