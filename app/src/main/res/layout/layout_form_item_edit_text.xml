<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/form_item_layout"
        style="@style/FormItemLayout"
        android:gravity="center_vertical">

        <!-- <ImageView
             android:id="@+id/form_item_icon"
             android:visibility="gone"
             style="@style/FormItemIcon" />-->

        <RelativeLayout
            android:id="@+id/ll_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <EditText
                android:id="@+id/form_item_value_text"
                style="@style/FormItemValueEditText"
                android:layout_width="match_parent"
                android:imeOptions="actionDone"
                android:overScrollMode="always"
                android:paddingLeft="@dimen/_10sdp"
                android:paddingRight="@dimen/_10sdp"
                android:scrollbarStyle="insideInset"
                android:scrollbars="vertical" />

            <ImageView
                android:id="@+id/clear_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:padding="5dp"
                android:src="@drawable/clear"
                android:visibility="gone" />
        </RelativeLayout>

        <ImageView
            android:id="@+id/form_item_action"
            style="@style/FormItemValueAction"
            android:src="@drawable/ic_arrow_down"
            android:visibility="gone" />
    </LinearLayout>

    <View
        android:id="@+id/item_edittext_devider"
        style="@style/Devider"
        android:layout_marginLeft="@dimen/size_15dp"
        android:layout_marginRight="@dimen/size_15dp"
        android:background="@color/gray" />
</LinearLayout>
