<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <FrameLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:background="@drawable/bg_gradient_top"
        tools:ignore="MissingConstraints">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/img_back"
                android:layout_width="@dimen/dimen_56dp"
                android:layout_height="@dimen/dimen_56dp"
                android:layout_centerVertical="true"
                android:foreground="?attr/selectableItemBackground"
                android:padding="@dimen/dimen_10dp"
                android:src="@drawable/ic_back_shadown" />

            <com.ems.dingdong.views.CustomBoldTextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="Liên kết tài khoản"
                android:textAllCaps="true"
                android:textColor="@color/white"
                android:textSize="14dp" />
        </RelativeLayout>
    </FrameLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">

            <androidx.cardview.widget.CardView
                android:id="@+id/camera_view"
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:layout_margin="10dp"
                app:cardCornerRadius="6dp"
                tools:ignore="MissingConstraints">

                <TextView
                    android:id="@+id/tv_chonnagnhang"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableRight="@drawable/ic_arrow_drop_down_v1"
                    android:gravity="center|left"
                    android:padding="10dp"
                    android:text="Chọn ngân hàng"
                    android:textColor="@color/black"
                    android:textSize="14dp"
                    android:textStyle="bold" />
            </androidx.cardview.widget.CardView>


            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/constraintLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:visibility="gone"
                app:layout_constraintTop_toBottomOf="@+id/camera_view"
                tools:ignore="MissingConstraints">

                <RelativeLayout
                    android:id="@+id/rl_nganhang"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/bg_nganhang"
                    android:padding="10dp">

                    <ImageView
                        android:id="@+id/img_logo"
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:layout_centerVertical="true"
                        android:src="@drawable/seabank" />

                    <TextView
                        android:id="@+id/tv_tennganhang"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_toEndOf="@+id/img_logo"
                        android:text="asdasds"
                        android:textColor="@color/black"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tv_tenchitietnganhang"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv_tennganhang"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="5dp"
                        android:layout_toEndOf="@+id/img_logo"
                        android:text="asdasds"
                        android:textColor="@color/black" />
                </RelativeLayout>


                <TextView
                    android:id="@+id/tv_tennganhanglienket"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:text="Thông tin liên kết"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    app:layout_constraintTop_toBottomOf="@+id/rl_nganhang" />


                <LinearLayout
                    android:id="@+id/ll_thongtin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintTop_toBottomOf="@+id/tv_tennganhanglienket">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:weightSum="2">

                        <TextView
                            android:id="@+id/textView2"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center|left"
                            android:layout_weight="0.7"
                            android:gravity="center|left"
                            android:text="Số giấy tờ tùy thân"
                            android:textColor="@color/black" />


                        <TextView
                            android:id="@+id/edt_sotaikhoan"
                            android:layout_width="0dp"
                            android:layout_height="42dp"
                            android:layout_weight="1.3"
                            android:background="@drawable/bg_edittext"
                            android:gravity="center|right"
                            android:hint="Nhập số giấy tờ tùy thân"
                            android:inputType="numberSigned"
                            android:paddingRight="10dp"
                            android:text=""
                            android:textColor="@color/colorOpen"
                            android:textSize="14dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:weightSum="2">

                        <TextView
                            android:id="@+id/textView4"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.7"
                            android:text="Loại GTTT"
                            android:textColor="@color/black" />

                        <TextView
                            android:id="@+id/edt_loaigiayto"
                            android:layout_width="0dp"
                            android:layout_height="42dp"
                            android:layout_weight="1.3"
                            android:background="@drawable/bg_edittext"
                            android:gravity="center|right"
                            android:hint="Chọn loại GTTT"
                            android:inputType="numberSigned"
                            android:paddingRight="10dp"
                            android:text=""
                            android:textColor="@color/colorOpen"
                            android:textSize="14dp" />

                    </LinearLayout>
                </LinearLayout>


                <Button
                    android:id="@+id/btn_yeucaulienket"
                    android:layout_width="wrap_content"
                    android:layout_height="42dp"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/bg_button_yellow"
                    android:paddingLeft="@dimen/dimen_10dp"
                    android:paddingRight="@dimen/dimen_10dp"
                    android:text="Xem danh sách tài khoản"
                    android:textColor="@color/white"
                    android:textSize="14dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/ll_thongtin" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <View
                style="@style/Devider"
                app:layout_constraintTop_toBottomOf="@+id/constraintLayout"
                tools:ignore="MissingConstraints" />


            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/constraintLayout_thongtin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:visibility="gone"
                app:layout_constraintTop_toBottomOf="@+id/constraintLayout"
                tools:ignore="MissingConstraints">

                <TextView
                    android:id="@+id/text2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:text="Danh sách tài khoản"
                    android:textColor="@color/black"
                    android:textSize="16dp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:id="@+id/linearLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintTop_toBottomOf="@+id/text2"
                    tools:layout_editor_absoluteX="10dp">


                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recyclerView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp">

                        <CheckBox
                            android:id="@+id/checkbox"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"

                            app:layout_constraintTop_toBottomOf="@+id/linearLayout" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingBottom="10dp"
                            android:text="Bằng việc xác nhận liên kết giữa Tài khoản thu tiền trên ứng dụng Dingdong/PNS với TKTC của Tôi tại SeABank, Tôi đồng ý rằng: Khi Tôi thực hiện xác nhận với mỗi giao dịch thu tiền COD thì SeABank được phép tự động trích tiền từ TKTC của Tôi tại SeABank để chuyển sang TK của Bưu cục quản lý"
                            android:textColor="@color/black"
                            app:layout_constraintStart_toEndOf="@+id/checkbox"
                            app:layout_constraintTop_toBottomOf="@+id/linearLayout" />
                    </LinearLayout>
                </LinearLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/linearLayout">

                    <Button
                        android:id="@+id/btn_huy"
                        android:layout_width="wrap_content"
                        android:layout_height="42dp"
                        android:background="@drawable/bg_button_red"
                        android:paddingLeft="@dimen/dimen_10dp"
                        android:paddingRight="@dimen/dimen_10dp"
                        android:text="Hủy bỏ"
                        android:textColor="@color/white"
                        android:textSize="14dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent" />

                    <Button
                        android:id="@+id/btn_tieptuc"
                        android:layout_width="wrap_content"
                        android:layout_height="42dp"
                        android:layout_marginLeft="10dp"
                        android:layout_toRightOf="@+id/btn_huy"
                        android:background="@drawable/bg_button_yellow"
                        android:paddingLeft="@dimen/dimen_10dp"
                        android:paddingRight="@dimen/dimen_10dp"
                        android:text="Tiếp tục"
                        android:textColor="@color/white"
                        android:textSize="14dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent" />
                </RelativeLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>
</LinearLayout>