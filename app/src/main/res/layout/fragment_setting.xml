<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="fill_parent"
            android:layout_height="48dp"
            android:background="@drawable/bg_gradient_top"
            android:orientation="vertical"
            android:theme="@style/ToolbarStyle"
            app:contentInsetStartWithNavigation="0.0dip"
            app:layout_collapseMode="pin"
            app:navigationIcon="@drawable/ic_back_shadown"
            app:popupTheme="@style/ToolbarStyle"
            app:title="Cài đặt"
            app:titleTextAppearance="@style/Toolbar.TitleText" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dimen_10dp"
            android:orientation="horizontal">

            <com.ems.dingdong.views.CustomTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Gạch nợ Paypost"
                android:textColor="@color/black"
                android:textSize="@dimen/_16sdp" />

            <androidx.appcompat.widget.SwitchCompat
                android:id="@+id/switch_pay_pos"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_gravity="right"
                android:gravity="right" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dimen_10dp"
            android:orientation="horizontal">

            <com.ems.dingdong.views.CustomTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_route"
                android:text="Tuyến"
                android:textColor="@color/black"
                android:textSize="@dimen/_16sdp" />

            <com.ems.dingdong.views.CustomTextView
                android:id="@+id/tv_route_new"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_gravity="right"
                android:gravity="right"
                android:text="Đổi tuyến"
                android:textColor="@color/background_blue"
                android:textSize="@dimen/_16sdp" />
        </RelativeLayout>

        <!--tạm thời gone-->
        <RelativeLayout
            android:visibility="visible"
            android:background="@drawable/bg_item_payment_select"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dimen_10dp"
            android:orientation="horizontal">

            <com.ems.dingdong.views.CustomTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_provider_Profile"
                android:text="CTEL"
                android:paddingLeft="@dimen/_2sdp"
                android:textColor="@color/black"
                android:textSize="@dimen/_16sdp" />

            <com.ems.dingdong.views.CustomTextView
                android:id="@+id/tv_select_provider"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_gravity="right"
                android:gravity="right"
                android:text="Chọn nhà cung cấp"
                android:paddingRight="@dimen/_2sdp"
                android:textColor="@color/background_blue"
                android:textSize="@dimen/_16sdp" />
        </RelativeLayout>

    </LinearLayout>

</FrameLayout>
