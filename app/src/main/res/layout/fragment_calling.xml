<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_gradient_calling"
    android:orientation="vertical">

    <com.ems.dingdong.views.CustomTextView
        android:id="@+id/tv_calling"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_20dp"
        android:gravity="center"
        android:text="Calling"
        android:textColor="@color/gray"
        android:textSize="@dimen/dimen_20dp" />

    <com.ems.dingdong.views.CustomTextView
        android:id="@+id/tv_phone_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_calling"
        android:layout_marginTop="@dimen/dimen_20dp"
        android:gravity="center"
        android:text="Số điện thoại"
        android:textColor="@color/gray"
        android:textSize="@dimen/dimen_30dp" />

    <Chronometer
        android:id="@+id/tv_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_phone_number"
        android:layout_marginTop="@dimen/dimen_20dp"
        android:gravity="center"
        android:textColor="@color/gray"
        android:textSize="@dimen/dimen_20dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center">

                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_marginLeft="@dimen/dimen_70dp"
                    android:background="@drawable/ic_mic" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center">

                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_marginRight="@dimen/dimen_70dp"
                    android:background="@drawable/ic_mic" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_10dp"
            android:weightSum="2"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center">

                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_marginLeft="@dimen/dimen_70dp"
                    android:background="@drawable/ic_mic" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center">

                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_marginRight="@dimen/dimen_70dp"
                    android:background="@drawable/ic_mic" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/dimen_30dp">

        <ImageView
            android:id="@+id/iv_call_answer"
            android:layout_width="@dimen/dimen_100dp"
            android:layout_height="@dimen/dimen_100dp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="@dimen/dimen_50dp"
            android:src="@drawable/ic_call_hang_green"
            android:background="@drawable/bg_call_end_selector" />

        <ImageView
            android:id="@+id/iv_call_end"
            android:layout_width="@dimen/dimen_100dp"
            android:layout_height="@dimen/dimen_100dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/bg_call_end_selector"
            android:src="@drawable/ic_call_end_red" />

        <ImageView
            android:id="@+id/iv_call_cancel"
            android:layout_width="@dimen/dimen_100dp"
            android:layout_height="@dimen/dimen_100dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dimen_50dp"
            android:background="@drawable/bg_call_end_selector"
            android:src="@drawable/ic_call_end_red" />
    </RelativeLayout>

</RelativeLayout>