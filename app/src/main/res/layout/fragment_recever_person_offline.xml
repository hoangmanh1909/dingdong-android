<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:clickable="true"
    android:focusable="true"
    android:orientation="vertical">

    <FrameLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true">

        <include layout="@layout/item_head_bg_common" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/img_back"
                android:layout_width="@dimen/dimen_56dp"
                android:layout_height="@dimen/dimen_56dp"
                android:layout_centerVertical="true"
                android:padding="@dimen/dimen_10dp"
                android:src="@drawable/ic_back_shadown" />

            <com.vinatti.dingdong.views.CustomBoldTextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="Thông tin vận đơn"
                android:textAllCaps="true"
                android:textColor="@color/color_5f2f75"
                android:textSize="@dimen/text_size_18sp" />
            <ImageView
                android:id="@+id/img_send"
                android:layout_width="@dimen/dimen_56dp"
                android:layout_height="@dimen/dimen_56dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:padding="@dimen/dimen_5dp"
                android:src="@drawable/ic_send_telegram" />
        </RelativeLayout>
    </FrameLayout>

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_10dp"
            android:layout_marginRight="@dimen/dimen_10dp"
            android:orientation="vertical">

            <android.support.v7.widget.RecyclerView
                android:id="@+id/recycler"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_10dp"
                android:layout_marginTop="@dimen/dimen_10dp"
                android:layout_marginRight="@dimen/dimen_10dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_5dp"
                android:orientation="vertical">

                <com.vinatti.dingdong.views.CustomBoldTextView
                    style="@style/HeaderNews"
                    android:layout_width="match_parent"
                    android:background="@drawable/bg_header_common"
                    android:padding="@dimen/dimen_10dp"
                    android:text="THÔNG TIN"
                    android:textColor="@color/white" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_white_radius_bottom_common"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="2">

                        <com.vinatti.dingdong.views.CustomTextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_weight="0.8"
                            android:paddingTop="@dimen/dimen_10dp"
                            android:paddingBottom="@dimen/dimen_10dp"
                            android:text="Người phát"
                            android:textColor="@color/black"
                            android:textSize="@dimen/text_size_14sp" />

                        <com.vinatti.dingdong.views.form.FormItemTextView
                            android:id="@+id/tv_userDelivery"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1.2"
                            android:paddingTop="@dimen/dimen_5dp"
                            android:paddingBottom="@dimen/dimen_5dp"
                            android:textColor="@color/black"
                            android:textSize="@dimen/text_size_14sp"
                            app:formShowClear="true" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_pay_ment"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:visibility="gone">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:weightSum="2">

                            <com.vinatti.dingdong.views.CustomTextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_weight="0.8"
                                android:paddingTop="@dimen/dimen_10dp"
                                android:paddingBottom="@dimen/dimen_10dp"
                                android:text="Tiền thu hộ"
                                android:textColor="@color/black"
                                android:textSize="@dimen/text_size_14sp" />

                            <com.vinatti.dingdong.views.form.FormItemTextView
                                android:id="@+id/tv_CollectAmount"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1.2"
                                android:paddingTop="@dimen/dimen_5dp"
                                android:paddingBottom="@dimen/dimen_5dp"
                                android:textColor="@color/black"
                                android:textSize="@dimen/text_size_14sp"
                                app:formShowClear="true" />

                        </LinearLayout>
                       <!-- <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:weightSum="2">

                            <com.vinatti.dingdong.views.CustomTextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_weight="0.8"
                                android:paddingTop="@dimen/dimen_10dp"
                                android:paddingBottom="@dimen/dimen_10dp"
                                android:text="Tiền thực thu"
                                android:textColor="@color/black"
                                android:textSize="@dimen/text_size_14sp" />

                            <com.vinatti.dingdong.views.form.FormItemEditText
                                android:id="@+id/edt_CollectAmount"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1.2"
                                android:paddingTop="@dimen/dimen_5dp"
                                android:paddingBottom="@dimen/dimen_5dp"
                                android:textColor="@color/black"
                                android:textSize="@dimen/text_size_14sp"
                                app:formShowClear="true" />

                        </LinearLayout>-->

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dimen_10dp"
                            android:orientation="horizontal"
                            android:weightSum="2">

                            <com.vinatti.dingdong.views.CustomTextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_weight="0.8"
                                android:paddingTop="@dimen/dimen_10dp"
                                android:paddingBottom="@dimen/dimen_10dp"
                                android:text="Thanh toán"
                                android:textColor="@color/black"
                                android:textSize="@dimen/text_size_14sp" />

                            <RadioGroup
                                android:id="@+id/radio_group"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1.2"
                                android:orientation="vertical"
                                android:paddingLeft="@dimen/dimen_10dp">

                                <RadioButton
                                    android:id="@+id/rad_cash"
                                    style="@style/CustomRadioButtonStyle"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:gravity="left|center"
                                    android:paddingLeft="@dimen/dimen_5dp"
                                    android:checked="true"
                                    android:text="Tiền mặt"
                                    android:textColor="@color/blue" />

                                <RadioButton
                                    android:id="@+id/rad_mpos"
                                    style="@style/CustomRadioButtonStyle"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/dimen_5dp"
                                    android:gravity="left|center"
                                    android:paddingLeft="@dimen/dimen_5dp"
                                    android:text="Qua mPos"
                                    android:textColor="@color/blue" />

                            </RadioGroup>

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="2">

                        <com.vinatti.dingdong.views.CustomTextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_weight="0.8"
                            android:paddingTop="@dimen/dimen_10dp"
                            android:paddingBottom="@dimen/dimen_10dp"
                            android:text="Người nhận"
                            android:textColor="@color/black"
                            android:textSize="@dimen/text_size_14sp" />

                        <com.vinatti.dingdong.views.form.FormItemEditText
                            android:id="@+id/edt_ReceiverName"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1.2"
                            android:paddingTop="@dimen/dimen_5dp"
                            android:paddingBottom="@dimen/dimen_5dp"
                            android:textColor="@color/black"
                            android:textSize="@dimen/text_size_14sp"
                            app:formHint="Người nhận hàng" />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="2">

                        <com.vinatti.dingdong.views.CustomTextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_weight="0.8"
                            android:paddingTop="@dimen/dimen_10dp"
                            android:paddingBottom="@dimen/dimen_10dp"
                            android:text="Số GTTT"
                            android:textColor="@color/black"
                            android:textSize="@dimen/text_size_14sp" />

                        <com.vinatti.dingdong.views.form.FormItemEditText
                            android:id="@+id/edt_ReceiverIDNumber"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1.2"
                            android:paddingTop="@dimen/dimen_5dp"
                            android:paddingBottom="@dimen/dimen_5dp"
                            android:textColor="@color/black"
                            android:textSize="@dimen/text_size_14sp"
                            app:formHint="Số giấy tờ"
                            app:formShowClear="true" />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="2">

                        <com.vinatti.dingdong.views.CustomTextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_weight="0.8"
                            android:paddingTop="@dimen/dimen_10dp"
                            android:paddingBottom="@dimen/dimen_10dp"
                            android:text="Ngày báo phát"
                            android:textColor="@color/black"
                            android:textSize="@dimen/text_size_14sp" />

                        <com.vinatti.dingdong.views.form.FormItemTextView
                            android:id="@+id/tv_deliveryDate"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1.2"
                            android:paddingTop="@dimen/dimen_5dp"
                            android:paddingBottom="@dimen/dimen_5dp"
                            android:textColor="@color/black"
                            android:textSize="@dimen/text_size_14sp"
                            app:formAction="@drawable/ic_arrow_down" />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="2">

                        <com.vinatti.dingdong.views.CustomTextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_weight="0.8"
                            android:paddingTop="@dimen/dimen_10dp"
                            android:paddingBottom="@dimen/dimen_10dp"
                            android:text="Giờ báo phát"
                            android:textColor="@color/black"
                            android:textSize="@dimen/text_size_14sp" />

                        <com.vinatti.dingdong.views.form.FormItemTextView
                            android:id="@+id/tv_deliveryTime"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1.2"
                            android:paddingTop="@dimen/dimen_5dp"
                            android:paddingBottom="@dimen/dimen_5dp"
                            android:textColor="@color/black"
                            android:textSize="@dimen/text_size_14sp"
                            app:formAction="@drawable/ic_arrow_down" />


                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="2">

                        <com.vinatti.dingdong.views.CustomTextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_weight="0.8"
                            android:paddingBottom="@dimen/dimen_10dp"
                            android:paddingTop="@dimen/dimen_10dp"
                            android:text="Lấy chữ ký"
                            android:textColor="@color/black"
                            android:textSize="@dimen/text_size_14sp" />

                        <com.vinatti.dingdong.views.CustomTextView
                            android:id="@+id/btn_sign"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1.2"
                            android:background="@drawable/bg_confirm_continue"
                            android:gravity="center"
                            android:paddingBottom="@dimen/dimen_5dp"
                            android:paddingLeft="@dimen/dimen_20dp"
                            android:paddingRight="@dimen/dimen_20dp"
                            android:paddingTop="@dimen/dimen_5dp"
                            android:text="Ký nhận"
                            android:textAllCaps="true"
                            android:textColor="@color/white"
                            android:textSize="@dimen/text_size_18sp" />


                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_signed"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:visibility="gone"
                        android:weightSum="2">

                        <com.vinatti.dingdong.views.CustomTextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_weight="0.8"
                            android:paddingBottom="@dimen/dimen_10dp"
                            android:paddingTop="@dimen/dimen_10dp"
                            android:text="Chữ ký đã ký"
                            android:textColor="@color/black"
                            android:textSize="@dimen/text_size_14sp" />

                        <ImageView
                            android:id="@+id/img_sign"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1.2"
                            android:gravity="center"
                            android:paddingBottom="@dimen/dimen_5dp"
                            android:paddingLeft="@dimen/dimen_20dp"
                            android:paddingRight="@dimen/dimen_20dp"
                            android:paddingTop="@dimen/dimen_5dp" />


                    </LinearLayout>
                </LinearLayout>


            </LinearLayout>

