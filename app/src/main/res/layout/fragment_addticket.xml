<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <FrameLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        tools:ignore="MissingConstraints">

        <include layout="@layout/item_head_bg_common" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/img_back"
                android:layout_width="@dimen/dimen_56dp"
                android:layout_height="@dimen/dimen_56dp"
                android:layout_centerVertical="true"
                android:padding="@dimen/dimen_10dp"
                android:src="@drawable/ic_back_shadown" />

            <com.ems.dingdong.views.CustomBoldTextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="Tạo ticket"
                android:textAllCaps="true"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_16sp" />

        </RelativeLayout>
    </FrameLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/ll"
            android:background="@color/white"
            tools:ignore="MissingConstraints">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:orientation="vertical"
                tools:ignore="MissingConstraints">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/textStyle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:enabled="false"
                        android:text="Mã bưu gửi: "
                        android:textSize="14dp" />

                    <TextView
                        android:id="@+id/edt_mabuugui"
                        style="@style/textStyle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:enabled="false"
                        android:fontFamily="@font/inter_semibold"
                        android:text="Mã đơn hàng"
                        android:textSize="14dp" />
                </LinearLayout>


                <TextView
                    style="@style/textStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:drawableEnd="@drawable/ic_sao"
                    android:drawablePadding="10dp"
                    android:enabled="false"
                    android:onClick="hideKeyboard"
                    android:text="Loại yêu cầu" />


                <TextView
                    android:id="@+id/edt_loaiyeucau"
                    style="@style/EditTextStyle"
                    android:layout_height="42dp"
                    android:layout_marginTop="4dp"
                    android:drawablePadding="10dp"
                    android:gravity="center|left"
                    android:hint="Vui lòng chọn"
                    android:paddingLeft="10dp"
                    android:textColorHint="#86909C"
                    app:drawableEndCompat="@drawable/ic_arrow_drop_down_v1" />
                <!--//edt_chitiet -->

                <TextView
                    style="@style/textStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:drawableEnd="@drawable/ic_sao"
                    android:drawablePadding="10dp"
                    android:enabled="false"
                    android:onClick="hideKeyboard"
                    android:text="Chi tiết yêu cầu" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:background="@drawable/bg_border_edittext"
                    android:enabled="false"
                    android:onClick="hideKeyboard"
                    android:orientation="vertical">

                    <EditText
                        android:id="@+id/edt_chitiet"
                        style="@style/EditTextStyle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:gravity="top"
                        android:hint="Nhập Chi tiết yêu cầu"
                        android:inputType="textMultiLine"
                        android:lines="8"
                        android:maxLength="250"
                        android:maxLines="10"
                        android:minLines="5"
                        android:padding="10dp"
                        android:paddingLeft="10dp"
                        android:scrollbars="vertical"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_size_14sp" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="right"
                        android:enabled="false"
                        android:onClick="hideKeyboard">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:enabled="false"
                            android:onClick="hideKeyboard"
                            android:padding="5dp"
                            android:src="@drawable/resizer" />
                    </RelativeLayout>
                </LinearLayout>

                <TextView
