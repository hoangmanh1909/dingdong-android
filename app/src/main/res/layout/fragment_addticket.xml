                    style="@style/EditTextStyle"
                    android:layout_width="match_parent"
                    android:layout_height="42dp"
                    android:layout_marginTop="4dp"
                    android:imeOptions="actionDone"
                    android:inputType="number"
                    android:maxLength="10"
