<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_gradient_vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical">


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true"
            android:scrollbars="none">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="64dp"
                        android:src="@drawable/ic_logo" />

                    <com.ems.dingdong.views.CustomTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="Xác thực ứng dụng lần đầu sử dụng"
                        android:textColor="@color/white"
                        android:textSize="@dimen/text_size_18sp" />

                    <ImageView
                        android:id="@+id/my_image_view"
                        android:layout_width="130dp"
                        android:layout_height="130dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="10dp"
                        android:padding="10dp"
                        android:src="@drawable/postman" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:paddingLeft="@dimen/size_20dp"
                        android:paddingTop="@dimen/size_16dp"
                        android:paddingRight="@dimen/size_20dp">

                        <EditText
                            android:id="@+id/edtPhone"
                            style="@style/st_gray.h3"
                            android:layout_width="match_parent"
                            android:layout_height="44dp"
                            android:layout_marginTop="@dimen/size_10dp"
                            android:background="@drawable/bg_border_edittext_v1"
                            android:drawableStart="@drawable/call"
                            android:drawablePadding="10dp"
                            android:gravity="left|center"
                            android:hint="Nhập số điện thoại"
                            android:imeOptions="actionDone"
                            android:inputType="phone"
                            android:maxLines="1"
                            android:paddingLeft="@dimen/_10sdp"
                            android:paddingTop="@dimen/size_10dp"
                            android:paddingRight="@dimen/size_10dp"
                            android:paddingBottom="@dimen/size_10dp"
                            android:textColor="@color/black" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/size_1dp"
                            android:background="@color/white_opacity43" />

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="24dp"
                            android:orientation="vertical">


                            <TextView
                                android:id="@+id/btn_tieptheo"
                                style="@style/textStyleButton"
                                android:layout_width="match_parent"
                                android:layout_height="48dp"
                                android:layout_gravity="center"
                                android:background="@drawable/bg_border_botton"
                                android:gravity="center"
                                android:text="Tiếp theo"
                                android:textColor="@color/white" />


                        </RelativeLayout>


                    </LinearLayout>

                </LinearLayout>


            </RelativeLayout>

        </ScrollView>

    </LinearLayout>

</FrameLayout>
