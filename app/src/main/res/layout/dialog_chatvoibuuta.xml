<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#80000000"
    tools:ignore="MissingDefaultResource">

    <androidx.cardview.widget.CardView
        style="@style/MyCardViewStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_margin="@dimen/size_16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@color/md_amber_a400"
                    android:gravity="center"
                    android:padding="@dimen/dimen_10dp"
                    android:text="Chat với bưu tá"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_14sdp"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/img_cancel"
                    android:layout_width="50dp"
                    android:layout_height="40dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:padding="5dp"
                    android:src="@drawable/ic_cancel" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="10dp">

                <TextView
                    style="@style/textStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:drawableRight="@drawable/ic_sao"
                    android:text="Số điện thoại"
                    android:textSize="14dp" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp">

                    <EditText
                        android:id="@+id/edt_sdt"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_toLeftOf="@+id/img_timkiem"
                        android:background="@drawable/bg_border_edittext"
                        android:drawablePadding="10dp"
                        android:gravity="center|left"
                        android:hint="Vui lòng nhập số điện thoại"
                        android:inputType="phone"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:textColor="@color/black"
                        android:textSize="14dp" />

                    <ImageView
                        android:id="@+id/img_timkiem"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:background="@drawable/bg_border_xanh"
                        android:padding="10dp"
                        android:src="@drawable/ic_search_sharp" />
                </RelativeLayout>

                <!--                <TextView-->
                <!--                    style="@style/textStyle"-->
                <!--                    android:layout_width="wrap_content"-->
                <!--                    android:layout_height="wrap_content"-->
                <!--                    android:layout_marginTop="16dp"-->
                <!--                    android:drawableRight="@drawable/ic_sao"-->
                <!--                    android:text="Loại bưu cục"-->
                <!--                    android:textSize="14dp" />-->

                <!--                <TextView-->
                <!--                    android:id="@+id/tv_loaibc"-->
                <!--                    android:layout_width="match_parent"-->
                <!--                    android:layout_height="40dp"-->
                <!--                    android:layout_marginTop="10dp"-->
                <!--                    android:background="@drawable/bg_border_edittext"-->
                <!--                    android:drawableEnd="@drawable/ic_arrow_drop_down_v1"-->
                <!--                    android:drawablePadding="10dp"-->
                <!--                    android:gravity="center|left"-->
                <!--                    android:hint="Vui lòng chọn"-->
                <!--                    android:paddingLeft="10dp"-->
                <!--                    android:paddingRight="10dp"-->
                <!--                    android:textColor="@color/black" />-->

                <LinearLayout
                    android:id="@+id/ll_chonlai"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <TextView
                        style="@style/textStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:drawableRight="@drawable/ic_sao"
                        android:text="Tổng công ty"
                        android:textSize="14dp" />

                    <TextView
                        android:id="@+id/tv_tct"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/bg_border_edittext"
                        android:drawablePadding="10dp"
                        android:gravity="center|left"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:text="Văn phòng tổng công ty"
                        android:textColor="@color/black" />

                    <TextView
                        style="@style/textStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:drawableRight="@drawable/ic_sao"
                        android:text="Bưu điện tỉnh"
                        android:textSize="14dp" />

                    <TextView
                        android:id="@+id/tv_bdtinh"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/bg_border_edittext"
                        android:drawableEnd="@drawable/ic_arrow_drop_down_v1"
                        android:drawablePadding="10dp"
                        android:gravity="center|left"
                        android:hint="Vui lòng chọn"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:textColor="@color/black" />

                    <TextView
                        style="@style/textStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:drawableRight="@drawable/ic_sao"
                        android:text="Bưu điện huyện"
                        android:textSize="14dp" />

                    <TextView
                        android:id="@+id/tv_bdhuyen"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/bg_border_edittext"
                        android:drawableEnd="@drawable/ic_arrow_drop_down_v1"
                        android:drawablePadding="10dp"
                        android:gravity="center|left"
                        android:hint="Vui lòng chọn"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:textColor="@color/black" />


                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp">

                    <TextView
                        style="@style/textStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableRight="@drawable/ic_sao"
                        android:text="Bưu cục"
                        android:textSize="14dp" />

                    <TextView
                        android:id="@+id/tv_chonlai"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:text="Chọn lại bưu cục"
                        android:textColor="@color/md_blue_700" />
                </RelativeLayout>

                <TextView
                    android:id="@+id/tv_buucuc"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/bg_border_edittext"
                    android:drawableEnd="@drawable/ic_arrow_drop_down_v1"
                    android:drawablePadding="10dp"
                    android:gravity="center|left"
                    android:hint="Vui lòng chọn"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/tv_titlev1"
                    style="@style/textStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:drawableRight="@drawable/ic_sao"
                    android:text="Tên bưu tá"
                    android:textSize="14dp" />

                <TextView
                    android:id="@+id/tv_tenbuuta"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/bg_border_edittext"
                    android:drawableEnd="@drawable/ic_arrow_drop_down_v1"
                    android:drawablePadding="10dp"
                    android:gravity="center|left"
                    android:hint="Vui lòng chọn"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/btn_chat"
                    android:layout_width="match_parent"
                    android:layout_height="42dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/bg_border_xanh"
                    android:drawablePadding="10dp"
                    android:gravity="center"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:text="Bắt đầu chat"

                    android:textColor="@color/white" />

            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>