<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <!-- TODO: Update blank fragment layout -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <FrameLayout
            android:id="@+id/header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true">

            <include layout="@layout/item_head_bg_common" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/img_back"
                    android:layout_width="@dimen/dimen_56dp"
                    android:layout_height="@dimen/dimen_56dp"
                    android:layout_centerVertical="true"
                    android:padding="@dimen/dimen_10dp"
                    android:src="@drawable/ic_back_shadown" />

                <com.ems.dingdong.views.CustomBoldTextView
                    android:id="@+id/tv_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="THÔNG TIN TÀI KHOẢN"
                    android:textColor="@color/white" />
            </RelativeLayout>
        </FrameLayout>

        <com.ems.dingdong.views.CustomTextView
            android:id="@+id/tv_name_prepaid_account"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dimen_10dp"
            android:text="Tên"
            android:layout_below="@+id/header"
            android:textColor="@color/black"
            android:textSize="@dimen/_16sdp" />

        <com.ems.dingdong.views.CustomTextView
            android:id="@+id/tv_phone_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dimen_10dp"
            android:text="Số điện thoại"
            android:layout_below="@+id/tv_name_prepaid_account"
            android:textColor="@color/black"
            android:textSize="@dimen/_16sdp" />

        <com.ems.dingdong.views.CustomTextView
            android:id="@+id/tv_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dimen_10dp"
            android:text="Số chứng minh thư nhân dân: "
            android:layout_below="@+id/tv_phone_number"
            android:textColor="@color/black"
            android:textSize="@dimen/_16sdp" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler"
            android:layout_width="match_parent"
            android:layout_below="@+id/tv_id"
            android:layout_height="match_parent" />
        <com.ems.dingdong.views.CustomMediumTextView
            android:id="@+id/tv_verify"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_radius_blue"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:paddingLeft="@dimen/dimen_10dp"
            android:paddingTop="@dimen/dimen_10dp"
            android:paddingRight="@dimen/dimen_10dp"
            android:paddingBottom="@dimen/dimen_10dp"
            android:layout_marginBottom="@dimen/dimen_20dp"
            android:text="Tạo tài khoản"
            android:textAllCaps="true"
            android:textColor="@color/white"
            android:textSize="16sp" />
    </RelativeLayout>

</FrameLayout>
