<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@android:color/white"
    android:orientation="vertical">

    <FrameLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <include layout="@layout/item_head_bg_common" />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/img_back"
                android:layout_width="@dimen/dimen_56dp"
                android:layout_height="@dimen/dimen_56dp"
                android:layout_centerVertical="true"
                android:padding="@dimen/dimen_10dp"
                android:src="@drawable/ic_back_shadown" />

            <com.ems.dingdong.views.CustomBoldTextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="Chi hộ BTXH - SEABANK"
                android:textAllCaps="true"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_16sp" />
        </RelativeLayout>




    </FrameLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <com.ems.dingdong.views.CustomTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#f5f6fa"
            android:text="THÔNG TIN NGƯỜI NHẬN TIỀN"
            android:padding="@dimen/dimen_10dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/dimen_10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2">

                <com.ems.dingdong.views.CustomTextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="0.8"
                    android:paddingTop="@dimen/dimen_10dp"
                    android:paddingBottom="@dimen/dimen_10dp"
                    android:text="Mã KH/Đại lý"
                    android:textColor="#253854"
                    android:textSize="@dimen/text_size_14sp" />

                <com.ems.dingdong.views.CustomEditText
                    android:id="@+id/edt_agent"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1.2"
                    android:gravity="right"
                    android:paddingTop="@dimen/dimen_5dp"
                    android:paddingBottom="@dimen/dimen_5dp"
                    android:textColor="#253854"
                    android:hint="Nhập mã KH/Đại lý"
                    android:background="@color/transparent"
                    android:textSize="@dimen/text_size_14sp" />
            </LinearLayout>

            <View
                style="@style/Devider"
                android:layout_width="match_parent"
                android:layout_height="0.5dp" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2">

                <com.ems.dingdong.views.CustomTextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="0.8"
                    android:paddingTop="@dimen/dimen_10dp"
                    android:paddingBottom="@dimen/dimen_10dp"
                    android:text="Họ và tên"
                    android:textColor="#253854"
                    android:textSize="@dimen/text_size_14sp" />

                <com.ems.dingdong.views.CustomEditText
                    android:id="@+id/edt_ReceiverName"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1.2"
                    android:gravity="right"
                    android:paddingTop="@dimen/dimen_5dp"
                    android:paddingBottom="@dimen/dimen_5dp"
                    android:textColor="#253854"
                    android:hint="Nhập họ tên người nhận tiền"
                    android:background="@color/transparent"
                    android:textSize="@dimen/text_size_14sp" />
            </LinearLayout>

            <View
                style="@style/Devider"
                android:layout_width="match_parent"
                android:layout_height="0.5dp" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2">

                <com.ems.dingdong.views.CustomTextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="0.8"
                    android:paddingTop="@dimen/dimen_10dp"
                    android:paddingBottom="@dimen/dimen_10dp"
                    android:text="Địa chỉ"
                    android:textColor="#253854"
                    android:textSize="@dimen/text_size_14sp" />

                <com.ems.dingdong.views.CustomEditText
                    android:id="@+id/edt_addressReceiver"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1.2"
                    android:gravity="right"
                    android:paddingTop="@dimen/dimen_5dp"
                    android:paddingBottom="@dimen/dimen_5dp"
                    android:textColor="#253854"
                    android:hint="Nhập địa chỉ"
                    android:background="@color/transparent"
                    android:textSize="@dimen/text_size_14sp" />
            </LinearLayout>

            <View
                style="@style/Devider"
                android:layout_width="match_parent"
                android:layout_height="0.5dp" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2">

                <com.ems.dingdong.views.CustomTextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="0.8"
                    android:paddingTop="@dimen/dimen_10dp"
                    android:paddingBottom="@dimen/dimen_10dp"
                    android:text="Số điện thoại"
                    android:textColor="#253854"
                    android:textSize="@dimen/text_size_14sp" />

                <com.ems.dingdong.views.CustomEditText
                    android:id="@+id/edt_phone"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1.2"
                    android:inputType="phone"
                    android:gravity="right"
                    android:paddingTop="@dimen/dimen_5dp"
                    android:paddingBottom="@dimen/dimen_5dp"
                    android:textColor="#253854"
                    android:hint="Nhập số điện thoại"
                    android:background="@color/transparent"
                    android:textSize="@dimen/text_size_14sp" />
            </LinearLayout>

            <View
                style="@style/Devider"
                android:layout_width="match_parent"
                android:layout_height="0.5dp" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2">

                <com.ems.dingdong.views.CustomTextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="0.8"
                    android:paddingTop="@dimen/dimen_10dp"
                    android:paddingBottom="@dimen/dimen_10dp"
                    android:text="Loại GTTT"
                    android:textColor="#253854"
                    android:textSize="@dimen/text_size_14sp" />

                <com.ems.dingdong.views.form.FormItemTextView
                    android:id="@+id/tv_typeId_receiver"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.2"
                    android:gravity="right"
                    android:textColor="#253854"
                    android:background="@color/transparent"
                    app:formHint="Chọn loại GTTT"
                    app:formAction="@drawable/ic_down"
                    app:formShowUnderline="false"
                    app:formDrawablePadding="@dimen/dimen_5dp"
                    android:textSize="@dimen/text_size_14sp" />
            </LinearLayout>

            <View
                style="@style/Devider"
                android:layout_width="match_parent"
                android:layout_height="0.5dp" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2">

                <com.ems.dingdong.views.CustomTextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="0.8"
                    android:paddingTop="@dimen/dimen_10dp"
                    android:paddingBottom="@dimen/dimen_10dp"
                    android:text="Số GTTT"
                    android:textColor="#253854"
                    android:textSize="@dimen/text_size_14sp" />

                <com.ems.dingdong.views.CustomEditText
                    android:id="@+id/edt_id_receiver"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1.2"
                    android:gravity="right"
                    android:paddingTop="@dimen/dimen_5dp"
                    android:paddingBottom="@dimen/dimen_5dp"
                    android:textColor="#253854"
                    android:hint="Nhập số GTTT"
                    android:background="@color/transparent"
                    android:textSize="@dimen/text_size_14sp" />
            </LinearLayout>

            <View
                style="@style/Devider"
                android:layout_width="match_parent"
                android:layout_height="0.5dp" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2">

                <com.ems.dingdong.views.CustomTextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="0.8"
                    android:paddingTop="@dimen/dimen_10dp"
                    android:paddingBottom="@dimen/dimen_10dp"
                    android:text="Ngày cấp"
                    android:textColor="#253854"
                    android:textSize="@dimen/text_size_14sp" />

                <com.ems.dingdong.views.form.FormItemTextView
                    android:id="@+id/edt_id_date_receiver"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.2"
                    android:gravity="right"
                    android:textColor="#253854"
                    android:background="@color/transparent"
                    app:formHint="Chọn ngày"
                    app:formAction="@drawable/ic_down"
                    app:formShowUnderline="false"
                    app:formDrawablePadding="@dimen/dimen_5dp"
                    android:textSize="@dimen/text_size_14sp" />
            </LinearLayout>

            <View
                style="@style/Devider"
                android:layout_width="match_parent"
                android:layout_height="0.5dp" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2">

                <com.ems.dingdong.views.CustomTextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="0.8"
                    android:paddingTop="@dimen/dimen_10dp"
                    android:paddingBottom="@dimen/dimen_10dp"
                    android:text="Nơi cấp"
                    android:textColor="#253854"
                    android:textSize="@dimen/text_size_14sp" />

                <com.ems.dingdong.views.CustomEditText
                    android:id="@+id/edt_id_place_receiver"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1.2"
                    android:gravity="right"
                    android:paddingTop="@dimen/dimen_5dp"
                    android:paddingBottom="@dimen/dimen_5dp"
                    android:textColor="#253854"
                    android:hint="Nhập nơi cấp"
                    android:background="@color/transparent"
                    android:textSize="@dimen/text_size_14sp" />
            </LinearLayout>

            <View
                style="@style/Devider"
                android:layout_width="match_parent"
                android:layout_height="0.5dp" />
            <com.ems.dingdong.views.CustomTextView
                android:id="@+id/btn_check"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_50dp"
                android:background="@drawable/bg_gradient_radius_5"
                android:gravity="center"
                android:paddingTop="@dimen/dimen_5dp"
                android:layout_marginTop="@dimen/dimen_10dp"
                android:paddingBottom="@dimen/dimen_5dp"
                android:text="Tiếp tục"
                android:textAllCaps="true"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_18sp" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>
