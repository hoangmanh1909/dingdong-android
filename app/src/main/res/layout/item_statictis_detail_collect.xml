<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/textlines_item1"
        android:orientation="horizontal"

        android:weightSum="10">

        <com.ems.dingdong.views.CustomBoldTextView
            android:id="@+id/tv_so_tt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1.5"
            android:gravity="center|left"
            android:padding="5dp"
            android:text="Sá»‘ TT"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_14sp" />

        <View
            android:layout_width="1dp"
            android:layout_height="wrap_content"
            android:background="@color/gray_btn_bg_pressed_color" />

        <com.ems.dingdong.views.CustomBoldTextView
            android:id="@+id/tv_order_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="4"
            android:gravity="center|left"
            android:padding="5dp"
            android:textColor="@color/blue"
            android:textSize="@dimen/text_size_14sp"
            tools:text="10.000" />

        <View
            android:layout_width="1dp"
            android:layout_height="wrap_content"
            android:background="@color/gray_btn_bg_pressed_color" />

        <com.ems.dingdong.views.CustomBoldTextView
            android:id="@+id/tv_lading"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="4.5"
            android:gravity="right|center"
            android:padding="5dp"
            android:textColor="@color/orange"
            android:textSize="@dimen/text_size_14sp"
            android:visibility="visible"
            tools:text="1234\n1234\n1234\n1234" />

    </LinearLayout>

    <!--    <View-->
    <!--        style="@style/Devider"-->
    <!--        android:layout_marginTop="@dimen/dimen_5dp" />-->

</LinearLayout>