<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingTop="@dimen/dimen_5dp"
    android:paddingBottom="@dimen/dimen_5dp">

    <com.vinatti.dingdong.views.CustomBoldTextView
        android:id="@+id/tv_stt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/orange"
        android:textSize="@dimen/text_size_14sp" />

    <com.vinatti.dingdong.views.CustomBoldTextView
        android:id="@+id/tv_code"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_5dp"
        android:textColor="@color/blue"
        android:textSize="@dimen/text_size_14sp" />

    <com.vinatti.dingdong.views.CustomTextView
        android:id="@+id/tv_contactName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_5dp"
        android:textColor="@color/grey"
        android:textSize="@dimen/text_size_12sp" />

    <com.vinatti.dingdong.views.CustomTextView
        android:id="@+id/tv_contact_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_5dp"
        android:textColor="@color/grey"
        android:textSize="@dimen/text_size_12sp" />

    <com.vinatti.dingdong.views.CustomTextView
        android:id="@+id/tv_contact_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_5dp"
        android:textColor="@color/grey"
        android:textSize="@dimen/text_size_12sp" />

    <View
        style="@style/Devider"
        android:layout_marginTop="@dimen/dimen_5dp" />
</LinearLayout>