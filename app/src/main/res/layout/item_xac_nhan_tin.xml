<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingTop="@dimen/dimen_5dp"
    android:paddingBottom="@dimen/dimen_5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <com.vinatti.dingdong.views.CustomBoldTextView
                android:id="@+id/tv_stt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="1"
                android:textColor="@color/orange"
                android:textSize="@dimen/text_size_14sp" />

            <com.vinatti.dingdong.views.CustomBoldTextView
                android:id="@+id/tv_code"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_5dp"
                android:text="abc"
                android:textColor="@color/blue"
                android:textSize="@dimen/text_size_14sp" />

            <com.vinatti.dingdong.views.CustomTextView
                android:id="@+id/tv_contactName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_5dp"
                android:text="cdf"
                android:textColor="@color/grey"
                android:textSize="@dimen/text_size_12sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <com.vinatti.dingdong.views.CustomTextView
                android:id="@+id/tv_contact_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_5dp"
                android:gravity="right"
                android:text="cdf"
                android:textColor="@color/grey"
                android:textSize="@dimen/text_size_12sp" />

            <com.vinatti.dingdong.views.CustomTextView
                android:id="@+id/tv_contact_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_5dp"
                android:gravity="right"
                android:text="cdf"
                android:textColor="@color/grey"
                android:textSize="@dimen/text_size_12sp" />
        </LinearLayout>
    </LinearLayout>


    <View
        style="@style/Devider"
        android:layout_marginTop="@dimen/dimen_5dp" />
</LinearLayout>