<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingTop="@dimen/dimen_5dp"
    android:paddingBottom="@dimen/dimen_5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="10">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="5"
            android:orientation="vertical">

            <com.ems.dingdong.views.CustomTextView
                android:id="@+id/tv_stt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_14sp"
                tools:text="1" />

            <com.ems.dingdong.views.CustomTextView
                android:id="@+id/tv_code"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_5dp"
                android:drawableLeft="@drawable/ic_barcode"
                android:drawablePadding="@dimen/dimen_8dp"
                android:gravity="center|left"
                android:paddingLeft="@dimen/dimen_8dp"
                android:textColor="@color/blue"
                android:textSize="@dimen/text_size_14sp"
                tools:text="1234567890" />

            <com.ems.dingdong.views.CustomTextView
                android:id="@+id/tv_customName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_5dp"
                android:drawableLeft="@drawable/ic_custom"
                android:gravity="center|left"
                android:paddingLeft="5dp"
                android:textColor="@color/grey"
                android:textSize="@dimen/text_size_14sp"
                tools:text="Trần Văn Anh" />

            <com.ems.dingdong.views.CustomTextView
                android:id="@+id/tv_contactName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_5dp"
                android:drawableLeft="@drawable/ic_person"
                android:gravity="center|left"
                android:textColor="@color/grey"
                android:textSize="@dimen/text_size_12sp"
                tools:text="Trần Văn Anh" />


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <CheckBox
                    android:id="@+id/cb_selected"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <com.ems.dingdong.views.CustomTextView
                    android:id="@+id/tv_ParcelCode"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dimen_5dp"
                    android:layout_toRightOf="@+id/cb_selected"
                    android:gravity="center"
                    android:paddingTop="@dimen/dimen_5dp"
                    android:paddingBottom="@dimen/dimen_5dp"
                    android:text="Click để xem danh sách bưu gửi >>"
                    android:textColor="@color/tx_blue_link"
                    android:textSize="@dimen/text_size_12sp"
                    android:visibility="gone"
                    tools:visibility="visible" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recycler"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_ParcelCode"
                    android:layout_toRightOf="@+id/cb_selected"
                    android:visibility="gone" />
            </RelativeLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="5"
            android:orientation="vertical">


            <com.ems.dingdong.views.CustomTextView
                android:id="@+id/tv_contact_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_5dp"
                android:layout_marginRight="@dimen/_10sdp"
                android:gravity="right|center"
                android:textColor="@color/grey"
                android:textSize="@dimen/text_size_12sp"
                tools:text="Mô tả" />


            <com.ems.dingdong.views.CustomTextView
                android:id="@+id/tv_contact_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_5dp"
                android:drawableRight="@drawable/ic_location_blue"
                android:gravity="right|center"
                android:textColor="@color/grey"
                android:textSize="@dimen/text_size_12sp"
                tools:text="241, Xuân Thủy, Cầu Giấy" />

            <com.ems.dingdong.views.CustomTextView
                android:id="@+id/tv_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginTop="@dimen/dimen_5dp"
                android:layout_marginRight="@dimen/_5sdp"
                android:background="@drawable/bg_status_not"
                android:gravity="center"
                android:padding="@dimen/_5sdp"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_12sp"
                tools:text="Chưa Xác nhận" />


        </LinearLayout>

    </LinearLayout>

    <com.ems.dingdong.views.CustomBoldTextView
        android:id="@+id/tv_thoi_gian"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="@dimen/_10sdp"
        android:text="12:21"
        android:textColor="@color/black"
        android:textSize="@dimen/text_size_12sp" />

    <View
        style="@style/Devider"
        android:layout_marginTop="@dimen/dimen_5dp" />
</LinearLayout>