<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#80000000">

    <androidx.cardview.widget.CardView
        style="@style/MyCardViewStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_margin="@dimen/size_16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <FrameLayout
                android:id="@+id/header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/bg_yellow_primary">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/img_back"
                        android:layout_width="@dimen/dimen_56dp"
                        android:layout_height="@dimen/dimen_56dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:padding="@dimen/dimen_10dp"
                        android:src="@drawable/ic_cancel" />

                    <com.ems.dingdong.views.CustomTextView
                        android:id="@+id/tv_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:gravity="center"
                        android:text="Nhập địa chỉ"
                        android:textAllCaps="true"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_14sdp" />

                </RelativeLayout>
            </FrameLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/bg_dialog_ui_picker"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="44dp"
                    android:layout_marginLeft="@dimen/dimen_5dp"
                    android:layout_marginTop="@dimen/dimen_10dp"
                    android:layout_marginRight="@dimen/dimen_10dp"
                    android:layout_marginBottom="@dimen/dimen_10dp"
                    android:background="@drawable/bg_radius_search_v1">


                    <EditText
                        android:id="@+id/edt_picker_search"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_toLeftOf="@+id/img_clear"
                        android:background="@android:color/transparent"
                        android:hint="Tìm kiếm"
                        android:inputType="textNoSuggestions"
                        android:paddingLeft="10dp"
                        android:textSize="14dp" />


                    <ImageView
                        android:id="@+id/img_clear"
                        android:layout_width="36dp"
                        android:layout_height="@dimen/dimen_56dp"
                        android:layout_toLeftOf="@+id/ll_scan_qr"
                        android:layout_centerVertical="true"
                        android:padding="@dimen/dimen_10dp"
                        android:src="@drawable/clear" />

                    <!--                    <com.ems.dingdong.views.CustomTextView-->
                    <!--                        android:id="@+id/tv_timkiem"-->
                    <!--                        android:layout_width="wrap_content"-->
                    <!--                        android:layout_height="match_parent"-->
                    <!--                        android:layout_alignParentRight="true"-->
                    <!--                        android:gravity="center"-->
                    <!--                        android:background="@drawable/ic_search"-->
                    <!--                        android:paddingRight="@dimen/dimen_5dp"-->
                    <!--                        android:text="Tìm kiếm"-->
                    <!--                        android:textSize="14dp" />-->
                    <LinearLayout
                        android:id="@+id/ll_scan_qr"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignParentRight="true"
                        android:layout_weight="2"
                        android:background="@drawable/bg_tim_kiem_with"
                        android:foreground="?attr/selectableItemBackground"
                        android:gravity="center">

                        <ImageView
                            android:id="@+id/img_capture"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_centerVertical="true"
                            android:paddingLeft="10dp"
                            android:paddingRight="10dp"
                            android:src="@drawable/ic_tim_kiem_v2" />
                    </LinearLayout>
                </RelativeLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recycler"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>
</RelativeLayout>