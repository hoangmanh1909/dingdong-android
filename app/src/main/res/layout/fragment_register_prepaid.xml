<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <!-- TODO: Update blank fragment layout -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="fill_parent"
            android:layout_height="48dp"
            android:background="@drawable/bg_gradient_top"
            android:orientation="vertical"
            android:theme="@style/ToolbarStyle"
            app:contentInsetStartWithNavigation="0.0dip"
            app:layout_collapseMode="pin"
            app:navigationIcon="@drawable/ic_back_shadown"
            app:popupTheme="@style/ToolbarStyle"
            app:title="Đăng ký Tài khoản Prepaid"
            app:titleTextAppearance="@style/Toolbar.TitleText" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/toolbar"
            android:orientation="horizontal"
            android:weightSum="2"
            android:id="@+id/tv_name_prepaid_account">

            <com.ems.dingdong.views.CustomTextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_margin="@dimen/dimen_10dp"
                android:text="Tên"
                android:textColor="@color/black"
                android:textSize="@dimen/_16sdp" />
            <EditText
                android:id="@+id/edt_name"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="2"
            android:layout_below="@+id/tv_name_prepaid_account"
            android:orientation="horizontal"
            android:id="@+id/tv_phone_number">

            <com.ems.dingdong.views.CustomTextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dimen_10dp"
                android:text="Số điện thoại"
                android:layout_weight="1"
                android:textColor="@color/black"
                android:textSize="@dimen/_16sdp" />
            <com.ems.dingdong.views.CustomTextView
                android:layout_width="0dp"
                android:id="@+id/tv_mobile_number"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dimen_10dp"
                android:layout_weight="1"
                android:textColor="@color/black"
                android:textSize="@dimen/_16sdp" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_phone_number"
            android:id="@+id/tv_credentical_id"
            android:weightSum="2"
            android:orientation="horizontal">

            <com.ems.dingdong.views.CustomTextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_margin="@dimen/dimen_10dp"
                android:text="Số chứng minh nhân dân"
                android:textColor="@color/black"
                android:textSize="@dimen/_16sdp" />
            <EditText
                android:id="@+id/edt_id"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content" />

        </LinearLayout>


        <com.ems.dingdong.views.CustomMediumTextView
            android:id="@+id/tv_verify"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/dimen_20dp"
            android:background="@drawable/bg_radius_blue"
            android:paddingLeft="@dimen/dimen_10dp"
            android:paddingTop="@dimen/dimen_10dp"
            android:paddingRight="@dimen/dimen_10dp"
            android:paddingBottom="@dimen/dimen_10dp"
            android:text="Tạo tài khoản"
            android:textAllCaps="true"
            android:textColor="@color/white"
            android:textSize="16sp" />
    </RelativeLayout>

</FrameLayout>
