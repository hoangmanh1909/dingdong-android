<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/bg_yellow_primary</item>
        <item name="colorPrimaryDark">@color/bg_yellow_primary</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme_Actionbar" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="MyRadioButtonStyle" parent="Widget.AppCompat.CompoundButton.RadioButton">
        <item name="android:textColor">@drawable/my_compound_button_color_selector</item>
        <item name="buttonTint">@drawable/my_compound_button_color_selector</item>
    </style>

    <style name="CustomRadioButtonStyle" parent="@android:style/Widget.CompoundButton.RadioButton">
        <item name="android:button">@drawable/custom_btn_radio</item>
    </style>

    <declare-styleable name="FormItem">
        <attr name="formValue" format="string" />
        <attr name="formHint" format="string" />
        <attr name="formIcon" format="reference" />
        <attr name="formAction" format="reference" />
        <attr name="android:maxLines" />
        <attr name="android:gravity" />
        <attr name="formDrawablePadding" format="dimension" />
        <attr name="android:minLines" />
        <attr name="android:inputType" />
        <attr name="android:textColor" />
        <attr name="formTextStyle" format="integer" />
        <attr name="formText" format="string" />
        <attr name="formShowClear" format="boolean" />
        <attr name="formLines" format="integer" />
        <attr name="formShowUnderline" format="boolean" />
        <attr name="formSingleLine" format="boolean" />
    </declare-styleable>

    <style name="FormItemLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:paddingTop">@dimen/size_12dp</item>
        <item name="android:paddingBottom">@dimen/size_12dp</item>
        <item name="android:layout_marginLeft">@dimen/size_15dp</item>

    </style>

    <style name="FormItemIcon">
        <item name="android:layout_width">@dimen/size_30dp</item>
        <item name="android:layout_height">@dimen/size_30dp</item>
        <item name="android:padding">@dimen/dimen_5dp</item>
        <item name="android:layout_marginRight">@dimen/size_10dp</item>
        <item name="android:layout_marginLeft">@dimen/size_10dp</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>

    <style name="FormItemValueEditText" parent="FormItemValueTextView">
        <item name="android:textColorHint">@color/n_gray_hsd</item>
        <item name="android:scrollbars">vertical</item>
        <item name="android:fadeScrollbars">false</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="FormItemValueTextView" parent="FormItemValue">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="FormItemValue">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical|left</item>
        <item name="android:layout_marginLeft">@dimen/size_10dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">15sp</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="FormItemValueAction">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>

    <style name="Devider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0.5dp</item>
        <item name="android:background">@color/gray</item>
    </style>

    <style name="Devider_Vertical">
        <item name="android:layout_width">0.5dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/gray</item>
    </style>

    <style name="st_white">
        <item name="android:textColor">#ffffff</item>
    </style>

    <style name="st_gray">
        <item name="android:textColor">@color/text_gray</item>
    </style>

    <style name="st_white.h2">
        <item name="android:textSize">@dimen/text_large</item>
    </style>

    <style name="st_gray.h3">
        <item name="android:textSize">@dimen/text_medium</item>
    </style>

    <style name="CustomTitleTextAppearance">
        <item name="android:textSize">@dimen/text_size_13sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="LightGrayDevider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0.5dp</item>
        <item name="android:background">@color/line_gray</item>
    </style>

    <style name="MyCardViewStyle" parent="CardView">
        <!-- Card background color -->
        <item name="cardBackgroundColor">@android:color/white</item>
        <!-- Ripple for API 21 of android, and regular selector on older -->
        <!--<item name="android:foreground">?android:selectableItemBackground</item>-->
        <!-- Resting Elevation from Material guidelines -->
        <item name="cardElevation">2dp</item>
        <!-- Add corner Radius -->
        <item name="cardCornerRadius">6dp</item>
        <!--<item name="android:clickable">true</item>-->
        <!--<item name="android:layout_margin">8dp</item>-->
    </style>

    <style name="ConfirmButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingLeft">@dimen/size_50dp</item>
        <item name="android:paddingRight">@dimen/size_50dp</item>
        <item name="android:layout_marginBottom">@dimen/size_12dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/text_size_14sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/bg_next_continue</item>
    </style>

    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/push_top_down</item>
        <item name="android:windowExitAnimation">@anim/push_bottom_up</item>
    </style>

    <style name="DatePickerSpinner">
        <item name="android:textSize">22dp</item>
        <item name="android:textColorPrimary">@color/colorPrimaryDark</item>
        <item name="android:colorControlNormal" tools:targetApi="lollipop">@color/colorAccent</item>
    </style>

    <style name="HeaderNews">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">@dimen/text_size_18sp</item>
        <item name="android:textColor">@color/color_5f2f75</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="TabLayoutTextAppearance" parent="@style/TextAppearance.Design.Tab">
        <item name="android:textSize">@dimen/dimen_13dp</item>
        <item name="android:textAllCaps">true</item>
        <item name="textAllCaps">true</item>

    </style>

    <style name="Toolbar.TitleText" parent="@style/TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">@dimen/_16sdp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="ToolbarStyle" parent="@style/ThemeOverlay.AppCompat.Light">
        <item name="colorControlNormal">@color/white</item>
    </style>


    <!-- set the rounded drawable as background to your bottom sheet -->
    <style name="BottomSheet" parent="@style/Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/bg_bottom_sheet_dialog_fragment</item>
    </style>

    <style name="BaseBottomSheetDialog" parent="@style/Theme.Design.Light.BottomSheetDialog">
        <item name="android:windowIsFloating">true</item>
        <item name="bottomSheetStyle">@style/BottomSheet</item>
        <item name="android:layout_marginLeft">@dimen/_3sdp</item>
        <item name="android:layout_marginRight">@dimen/_3sdp</item>
    </style>

    <style name="BottomSheetDialogTheme" parent="BaseBottomSheetDialog" />

    <declare-styleable name="PagerSlidingTabStrip">
        <attr name="pstsIndicatorColor" format="color" />
        <attr name="pstsIndicatorHeight" format="dimension" />
        <attr name="pstsUnderlineColor" format="color" />
        <attr name="pstsUnderlineHeight" format="dimension" />
        <attr name="pstsDividerColor" format="color" />
        <attr name="pstsDividerWidth" format="dimension" />
        <attr name="pstsDividerPadding" format="dimension" />
        <attr name="pstsScrollOffset" format="dimension" />
        <attr name="pstsShouldExpand" format="boolean" />
        <attr name="pstsPaddingMiddle" format="boolean" />
        <attr name="pstsTabPaddingLeftRight" format="dimension" />
        <attr name="pstsTabBackground" format="reference" />
        <attr name="pstsTabTextSize" format="dimension" />
        <attr name="pstsTabTextColor" format="reference" />
        <attr name="pstsTabTextStyle" format="reference">
            <flag name="normal" value="0x0" />
            <flag name="bold" value="0x1" />
            <flag name="italic" value="0x2" />
        </attr>
        <attr name="pstsTabTextAllCaps" format="boolean" />
        <attr name="pstsTabTextAlpha" format="integer" />
        <attr name="pstsTabTextFontFamily" format="string" />
    </declare-styleable>

    <style name="keyboard_row">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:showDividers">beginning|middle|end</item>
    </style>

    <style name="SplashTheme" parent="AppTheme">
        <item name="android:windowBackground">@drawable/bg_splash</item>
    </style>

    <style name="TextViewSuccess">
        <item name="android:background">@drawable/bg_form_success</item>
    </style>
    <style name="TextViewFail">
        <item name="android:background">@color/color_rad_fail</item>
    </style>
    <style name="TextViewChangeRoute">
        <item name="android:background">@color/color_rad_change_route</item>
    </style>

    <style name="TextHeaderDeliveryPartial">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/tx_blue_link</item>
    </style>
</resources>
